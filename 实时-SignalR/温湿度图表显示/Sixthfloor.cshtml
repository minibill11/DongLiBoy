@{
    ViewBag.Title = "六楼温湿度";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/KongYaHT/Content/css.css" rel="stylesheet" />
@*<script src="~/Scripts/gauge.min.js"></script>*@
<script src="~/Areas/KongYaHT/Script/highcharts.js"></script>
<script src="~/Areas/KongYaHT/Script/highcharts-more.js"></script>
<h2 class="text-center" style="color:#006FBD;font-weight: bold;">@ViewBag.Title</h2>

<style type="text/css">
    .modal-dialog {
        left: 0;
    }

    #floor6 {
        position: relative;
        width: 1172px;
        height: 18px;
        bottom: 200px;
    }

    #WS1 {
        position: relative;
        margin-left: 135px;
        bottom: -450px;
        border: 1px dashed #d53737;
        padding: 2px;
        width: 113px;
        height: 42px;
    }

    #GJB1,
    #GJB2 {
        color: red;
    }

    #floor6 a:hover, #floor6 a:active, #floor6 a:visited {
        text-decoration: none;
        color: rgb(51, 51, 51);
    }

    #floor6 a {
        display: block;
        width: 110px;
        color: rgb(51, 51, 51);
    }
</style>


<body style="background-color: #9D9D9D;">
    <div class="container body-content">
        <div>@Html.RouteLink("温湿度数据汇总", "KongYaHT", new { Controller = "KongYa", Action = "FloorDataShow" })</div>
        <div id="floor6">
            <div id="WS1">
                <div style="font-size: 13px;font-weight:bolder;">
                    <a href="~/KongYaHT/KongYa/KY_Charts?point=空压房内温湿度" title="点击查看空压房内温湿度详情" target="_blank">
                        <font>温度：</font><font style="background-color:yellow"><span id="6F_temprature">#</span> °C</font><br />
                        <font>湿度：</font><font style="background-color:yellow"><span id="6F_humidity">#</span> %RH</font><br />
                        @*<font>状态：</font><span style="color:white;font-weight:normal" id="6F_state">#</span>*@
                    </a>
                </div>
            </div>
        </div>
        <embed src="~/Areas/KongYaHT/image/6s6.svg">
    </div>

    @section scripts {
        <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
        <script src="~/signalr/hubs"></script>
        <script>
            $(function () {
                var mypush = $.connection.Hub6;
                mypush.client.sendTH6 = function (TH6_json) {
                    var room6 = JSON.parse(TH6_json.room6);

                    //6F_点位
                    $("#6F_temprature").html(room6.temperature);
                    $("#6F_humidity").html(room6.humidity);
                    //if (room6.temperature > 16 && room6.temperature < 28) {
                    //    if (room6.humidity > 45 && room6.humidity < 70) {
                    //        $("#6F_state").html("正常").css("background", "green");
                    //    } else { $("#6F_state").html("湿度警报").css("background", "red"); }
                    //} else {
                    //    if (room6.humidity > 45 && room6.humidity < 70) {
                    //        $("#6F_state").html("温度警报").css("background", "red");
                    //    } else { $("#6F_state").html("温湿度警报").css("background", "red"); }
                    //}

                };
                $.connection.hub.start();
            });
        </script>
    }

</body>