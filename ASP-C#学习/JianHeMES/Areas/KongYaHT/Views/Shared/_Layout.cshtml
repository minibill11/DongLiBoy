<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 健和光电MES</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryform")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryvalAll")
    @Scripts.Render("~/bundles/home")
    @Scripts.Render("~/bundles/common")
    @Styles.Render("~/Scripts/easyui")
    @Styles.Render("~/Content/easyuicss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/echarts")
    @Scripts.Render("~/Scripts/vue")
    @Scripts.Render("~/Scripts/highcharts")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("健和光电MES", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("组装", "Index", "Assembles")</li>
                    <li>@Html.ActionLink("订单", "Index", "OrderMgms")</li>
                    <li>@Html.ActionLink("用户", "Index", "Users")</li>
                    <li>@Html.ActionLink("条码", "Index", "BarCodes")</li>
                    <li>@Html.ActionLink("订单信息", "Index", "OrderInformations")</li>
                    <li>@Html.ActionLink("模组校正信息", "Index", "CalibrationRecords")</li>
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    <li>@Html.ActionLink("技术支持", "Contact", "Home")</li>
                </ul>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar navbar-nav navbar-right">
                        <li>
                            @{
                                var UserName = Session["User"] == null ? string.Empty : ((JianHeMES.Models.Users)Session["User"]).UserName;
                            }
                            <a href="#">@UserName</a>
                        </li>
                        <li>
                            @if (Session["User"] == null)
                            {
                                <a href="/Users/Login">登录</a>
                            }
                            else
                            {
                                <a href="/Users/Logoff">退出</a>
                            }
                        </li>
                    </ul>
                </div>

                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*@RenderSection("scripts", false)*@
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 健和光电MES</p>
        </footer>
    </div>

</body>
</html>
