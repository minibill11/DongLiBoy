            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
            <col width="80 ">
        </colgroup>
        <tr class="rowTitle1">
            <th rowspan="2">订单号</th>
            <th rowspan="2">订单数量</th>
            <th rowspan="2">平台型号</th>
            <th colspan="2">生产排期</th>
            <th rowspan="2">实际开始生产时间</th>
            <th colspan="2">组装工序</th>
            <th colspan="2">调试老化</th>
