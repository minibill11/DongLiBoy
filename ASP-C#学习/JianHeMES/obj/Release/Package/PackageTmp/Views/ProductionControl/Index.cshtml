                <td v-on:click="Detail(item.OrderNum,'Calibration')">{{item.Calibration_Pass_Rate}}</td>
                <td v-on:click="Detail(item.OrderNum,'Appearances')">{{item.Appearances_Finish_Rate}}</td>
                <td v-on:click="Detail(item.OrderNum,'Appearances')">{{item.Appearances_Pass_Rate}}</td>*@
            <td>{{item.Burn_in_Finish_Rate}}</td>
            <td>{{item.Burn_in_Pass_Rate}}</td>
            <td>{{item.Calibration_Finish_Rate}}</td>
            <td>{{item.Calibration_Pass_Rate}}</td>
            <td>{{item.Appearances_Finish_Rate}}</td>
            <td>{{item.Appearances_Pass_Rate}}</td>
        </tr>
    </table>
</div>
