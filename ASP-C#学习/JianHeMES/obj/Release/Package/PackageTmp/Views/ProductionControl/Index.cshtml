            <td>{{item.PlanInputTime}}</td>
            <td>{{item.PlanCompleteTime}}</td>
            <td>{{item.ActualProductionTime}}</td>
            <td v-on:click="Detail(item.OrderNum,'Assemble')">{{item.Assemble_Finish_Rate}}</td>
            <td v-on:click="Detail(item.OrderNum,'Assemble')">{{item.Assemble_Pass_Rate}}</td>
                @*<td v-on:click="Detail(item.OrderNum,'Burn_in')">{{item.Burn_in_Finish_Rate}}</td>
                <td v-on:click="Detail(item.OrderNum,'Burn_in')">{{item.Burn_in_Pass_Rate}}</td>
