<div id="app" v-cloak>
    <el-container>
        <el-header class="text-center">
            <h1>@ViewBag.Title</h1>
            @*<a href="/Process_Capacity/Index"><el-button size="small">工序产能首页</el-button></a>
                <a href="/Process_Capacity/StandardCapacity"><el-button size="small">标准产能</el-button></a>
                <a href="/Process_Capacity/ProcessBalanceCard"><el-button size="small">工序平衡卡</el-button></a>*@
        </el-header>
        <el-main v-loading="loading">
            <el-row class="text-center">
                <el-table v-bind:data="tableObj.List"
                          max-height="500"
                          size="mini"
                          align="center"
                          :span-method="objectSpanMethod"
                          border>
                    <div slot="empty">暂无数据</div>
                    @*表格开始*@
                    <el-table-column label="编号">
                        <el-table-column label="标题">
                            <el-table-column type="index" label="序号" width="50">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>
                    <el-table-column label-class-name="titleFlex">
                        <template slot="header" slot-scope="scope">
                            <span class="titleDiv">
                                @*{{tableObj.number}}*@
                                <el-select v-if="Object.keys(tableObj)!=''" v-model="tableObj.number" placeholder="版本号" size="mini">
                                    <el-option :disabled="true">
                                        <span style="float: left" class="green">{{ tableObj.number }}</span>
                                        <span style="float: right; color: #8492a6; font-size: 9px">当前编号</span>
                                    </el-option>
                                    <el-option-group label="历史编号：">
                                        <el-option v-for="item in numOptions"
                                                   :key="item.value"
                                                   :label="item.value"
                                                   :value="item.value">
                                        </el-option>
                                    </el-option-group>
                                </el-select>
                            </span>
                            <span class="titleDiv">工段</span>
                            <span class="titleDiv">{{tableObj.Section}}</span>
                        </template>
                        <el-table-column>
                            <template slot="header" slot-scope="scope">
                                <div>{{tableObj.Title}}</div>
                            </template>
                            <el-table-column prop="ProcessName" label="工序名称">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>

                    <el-table-column label="标准总人数">
                        <el-table-column label="">
                            <template slot="header" slot-scope="scope">
                                <div>{{tableObj.StandardTotal}}</div>
                            </template>
                            <el-table-column prop="StandarPersondNumber" label="标准人数(人)" width="100">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>
                    <el-table-column label="平衡率(%)">
                        <el-table-column label="">
                            <template slot="header" slot-scope="scope">
                                <div>{{tableObj.BalanceRate}}</div>
                            </template>
                            <el-table-column prop="StandardNumber" label="标准工时(秒)" width="100">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>
                    <el-table-column label="瓶颈(秒)">
                        <el-table-column label="">
                            <template slot="header" slot-scope="scope">
                                <div>{{tableObj.Bottleneck}}</div>
                            </template>
                            <el-table-column prop="UnioTime" label="单位工时(秒)" width="100">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>
                    <el-table-column label="标准产量(PCS/H)">
                        <el-table-column label="">
                            <template slot="header" slot-scope="scope">
                                <div>{{tableObj.StandardOutput}}</div>
                            </template>
                            <el-table-column prop="JigName" label="机器/夹具名称" width="100">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>
                    <el-table-column label="标准人均时产量(PCS/H/R)">
                        <el-table-column label="">
                            <template slot="header" slot-scope="scope">
                                <div>{{tableObj.StandardHourlyOutputPerCapita}}</div>
                            </template>
                            <el-table-column prop="MachineTime" label="机器时间(秒)" width="100">
                            </el-table-column>
                            <el-table-column prop="MachineNumber" label="机器数量(台)" width="100">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>
                    <el-table-column label="产品工时(分钟/PCS)">
                        <el-table-column label="">
                            <template slot="header" slot-scope="scope">
                                <div>{{tableObj.ProductWorkingHours}}</div>
                            </template>
                            <el-table-column prop="JigNum" label="夹具/工具(个)" width="100">
                            </el-table-column>
                            <el-table-column prop="Remark" label="备注" width="100">
                            </el-table-column>
                        </el-table-column>
                    </el-table-column>
                </el-table>
                <el-table size="mini"
                          align="center"
                          :data="tableLine"
                          border
                          stripe>
                    <el-table-column>

                        <el-table-column type="index" label="修订" width="80">
                        </el-table-column>

                        <el-table-column prop="RevisionContent" label="修订内容">
                            <template slot-scope="scope">
                                {{tableObj.RevisionContent}}
                            </template>
                        </el-table-column>

                        <el-table-column prop="index" label="制定或修订/日期" width="150">
                            <template slot-scope="scope">
                                {{tableObj.MakingPeople}}
                                <br />
                                {{tableObj.MakingTime}}
                            </template>
                        </el-table-column>

                        <el-table-column prop="index" label="审核/日期" width="170">
                            <template slot-scope="scope">
                                <template v-if="tableObj.ExaminanPeople!=''&&tableObj.ExaminanTime!=''">
                                    {{tableObj.IsPassExaminan==true?"通过":"不通过"}}
                                    <br />
                                    {{tableObj.ExaminanPeople}}
                                    <br />
                                    {{tableObj.ExaminanTime}}
                                </template>
                                <template v-else>
                                    <el-select v-model="selectExaminan" placeholder="请选择" clearable size="mini" style="width:100px;">
                                        <el-option value="true" label="通过"></el-option>
                                        <el-option value="false" label="不通过"></el-option>
                                    </el-select>
                                    <el-button @@click="Autograph(tableObj.Section,tableObj.number,'审核',selectExaminan)" :disabled="selectExaminan==''" size="mini" type="primary" plain>确认</el-button>
                                </template>
                            </template>
                        </el-table-column>

                        <el-table-column prop="index" label="批准/日期" width="170">
                            <template slot-scope="scope">
                                <template v-if="tableObj.ApproverPeople!=''&&tableObj.ApproverTime!=''">
                                    {{tableObj.IsPassApprover==true?"通过":"不通过"}}
                                    <br />
                                    {{tableObj.ApproverPeople}}
                                    <br />
                                    {{tableObj.ApproverTime}}
                                </template>
                                <template v-else>
                                    <el-select v-model="selectApprover" :disabled="tableObj.IsPassExaminan!=true" placeholder="请选择" clearable size="mini" style="width:100px;">
                                        <el-option value="true" label="通过"></el-option>
                                        <el-option value="false" label="不通过"></el-option>
                                    </el-select>
                                    <el-button @@click="Autograph(tableObj.Section,tableObj.number,'批准',selectApprover)" :disabled="selectApprover==''" size="mini" type="primary" plain>确认</el-button>
                                </template>
                            </template>
                        </el-table-column>

                        <el-table-column prop="index" label="受控/日期" width="170">
                            <template slot-scope="scope">
                                <template v-if="tableObj.ControlledPeople!=''&&tableObj.ControlledTime!=''">
                                    {{tableObj.IsPassControlled==true?"通过":"不通过"}}
                                    <br />
                                    {{tableObj.ControlledPeople}}
                                    <br />
                                    {{tableObj.ControlledTime}}
                                </template>
                                <template v-else>
                                    <el-select v-model="selectControlled" :disabled="tableObj.IsPassApprover!=true" placeholder="请选择" clearable size="mini" style="width:100px;">
                                        <el-option value="true" label="通过"></el-option>
                                        <el-option value="false" label="不通过"></el-option>
                                    </el-select>
                                    <el-button @@click="Autograph(tableObj.Section,tableObj.number,'受控',selectControlled)" :disabled="selectControlled==''" size="mini" type="primary" plain>确认</el-button>
                                </template>
                            </template>
                        </el-table-column>
                    </el-table-column>
                </el-table>
            </el-row>
            <el-row style="margin-top:10px;display:flex">
                <upload-img-pdf :obj="urlObj" class="uploadBtn"></upload-img-pdf>
                <show-img-pdf :obj="urlObj" class="showBtn"></show-img-pdf>
            </el-row>
        </el-main>
    </el-container>
</div>
