                <tr id="forClone" class="rowNum">
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td>
                        <input type="button" value="清空" id="replace" onclick="clearTr(this)">
                        <input class="delete" type="button" value="移除" id="delete" onclick="removeTr(this)">
                    </td>
                </tr>
                <tr class="rowNum">
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td><input type="text" value=""></td>
                    <td>
                        <input type="button" value="清空" id="replace" onclick="clearTr(this)">
