                            };
                        }
                    },
                ], [
                    {
                        title: '', colspan: 2, align: 'center',
                        //styler: function (value, row, index) {
                        //    return {class:'week',style:'color:red'}
                        //}
                    },
                    { title: '', colspan: 2, align: 'center' },
                    { title: '', colspan: 2, align: 'center' },
