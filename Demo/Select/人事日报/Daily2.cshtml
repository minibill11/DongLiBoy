                        formatter: function (value, row, index) { return value == "0" ? "" : value; }
                    },
                    { field: 'Resigned_that_month', title: '当月<br />待离职人数', align: 'center', rowspan: 3, width: 68 },
                    { field: 'Date', title: '时间', align: 'center', rowspan: 3, width: 70 },
                    {
