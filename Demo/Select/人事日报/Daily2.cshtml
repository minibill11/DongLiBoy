                        formatter: function (value, row, index) { return value == "0" ? "" : value; }
                    },
                    {
                        field: 'Thurs_workers', title: '劳务', align: 'center', width: 32,
                        formatter: function (value, row, index) { return value == "0" ? "" : value; }
                    },
                    {
                        field: 'Thurs_employees', title: '正式', align: 'center', width: 32,
                        formatter: function (value, row, index) { return value == "0" ? "" : value; }
                    },
                    {
