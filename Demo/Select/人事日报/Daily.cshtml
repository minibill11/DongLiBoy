@model IEnumerable<JianHeMES.Models.Personnel_daily>
@{
    ViewBag.Title = "人事日报表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table > tbody > tr > td, .table > thead > tr > th, .table > tbody > tr > th {
        text-align: center;
        vertical-align: middle;
        font-size: 12px;
        padding: 5px 3px;
        border-color: rgba(35, 35, 35, 0.9);
    }

    .table > colgroup + thead > tr:first-child > th {
        border-top: 1px solid rgba(35, 35, 35, 0.9);
    }

    .titlecolor {
        background-color: rgba(252, 213, 180, 0.8);
    }

    .workercolor {
        background-color: rgba(220, 230, 241, 0.8);
    }

    .personcolor {
        background-color: rgba(255, 255, 0, 0.8);
    }

    .table-bordered > thead > tr > th {
        border-bottom-width: 1px;
    }

    #tableApp {
        table-layout: fixed;
    }

    .rowdata:hover {
        background-color: rgba(252, 213, 180, 0.4);
    }
</style>
<br />
@Html.ActionLink("提交日报信息", "Create")
<br /><br />

<table id="tableApp" class="table table-bordered">
    <colgroup>
        <col width="80 ">
        <col width="50 ">
        <col width="50 ">
        <col width="35 ">
        <col width="35 ">
        <col width="45 ">
        <col width="65 ">
        <col width="65 ">
        <col width="40 ">
        <col width="40 ">
        <col width="50 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="31 ">
        <col width="55 ">
        <col width="65 ">
        <col width="65 ">
        <col width="43">
    </colgroup>
    <thead>
        <tr>
            <th colspan="19" style="border-right:none"><h4 style="margin:0">人事日报</h4></th>
            <th colspan="6" style="border-left:none">
                @using (Html.BeginForm("Daily", "Personnel", FormMethod.Post, new { id = "searchForm", @class = "text-center" }))
                {
                    @Html.AntiForgeryToken()
                    <span>日期：<input type="date" name="date" v-model="SearchDate" /></span>
                    <input type="submit" id="searchButton" class="hidden" value="查找" />
                }
            </th>
        </tr>
        <tr class="titlecolor">
            <th rowspan="3">部门</th>
            <th rowspan="3">负责人</th>
            <th rowspan="3">编制</th>
            <th rowspan="3">刚需人数</th>
            <th rowspan="3">正式人数</th>
            <th rowspan="3">劳务工人数</th>
            <th rowspan="3">当日入职<br />正式工人数</th>
            <th rowspan="3">当日入职<br />临时工人数</th>
            <th rowspan="3">汇总人数</th>
            <th rowspan="3">当前缺口人数</th>
            <th rowspan="3">预填表人数</th>
            <th colspan="10">实际每日入职人数</th>
            <th rowspan="3">本周入职人数合计</th>
            <th rowspan="3">当月<br />待离职人数</th>
            <th rowspan="3">时间</th>
            <th rowspan="3">上报人</th>
        </tr>
        <tr class="titlecolor">
            <th colspan="2" class="week"></th>
            <th colspan="2" class="week"></th>
            <th colspan="2" class="week"></th>
            <th colspan="2" class="week"></th>
            <th colspan="2" class="week"></th>
        </tr>
        <tr class="titlecolor">
            <th>劳务</th>
            <th>正式</th>
            <th>劳务</th>
            <th>正式</th>
            <th>劳务</th>
            <th>正式</th>
            <th>劳务</th>
            <th>正式</th>
            <th>劳务</th>
            <th>正式</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="25" class="titlecolor"><h4>无记录</h4></td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="rowdata">
                    <td>@Html.DisplayFor(modelItem => item.Department)</td>
                    <td>@Html.DisplayFor(modelItem => item.Principal)</td>
                    <td class="personcolor">@Html.DisplayFor(modelItem => item.Aurhorized_personnel)</td>
                    <td>@Html.DisplayFor(modelItem => item.Need_personnel)</td>
                    <td class="zerodata">@Html.DisplayFor(modelItem => item.Employees_personnel)</td>
                    <td class="zerodata">@Html.DisplayFor(modelItem => item.Workers_personnel)</td>
                    <td class="zerodata">@Html.DisplayFor(modelItem => item.Today_on_board_employees)</td>
                    <td class="zerodata">@Html.DisplayFor(modelItem => item.Today_on_board_workers)</td>
                    <td class="personcolor">@Convert.ToInt32(item.Employees_personnel + item.Workers_personnel + item.Today_on_board_employees + item.Today_on_board_workers)</td>
                    <td>@Convert.ToInt32(item.Need_personnel - item.Employees_personnel - item.Workers_personnel - item.Today_on_board_employees - item.Today_on_board_workers)</td>
                    <td>@Html.DisplayFor(modelItem => item.Interview)</td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td class="coldata"></td>
                    <td>@Html.DisplayFor(modelItem => item.Resigned_that_month)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reporter)
                        @if (((JianHeMES.Models.Users)Session["User"]) != null)
                        {
                            if (((JianHeMES.Models.Users)Session["User"]).UserName == item.Reporter || item.Reporter == "刘露露" || ((JianHeMES.Models.Users)Session["User"]).Role == "系统管理员")
                            {
                                @Html.ActionLink("修改", "Edit", new { id = item.Id })
                            }
                            @*@Html.ActionLink("修改", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        }
                    </td>
                </tr>
                if (Model.ToList().IndexOf(item) == Model.ToList().Count() - 1)
                {
                    <tr class="titlecolor">
                        <th colspan="2">合计</th>
                        <th>@Model.Sum(c => c.Aurhorized_personnel)</th>
                        <th>@Model.Sum(c => c.Need_personnel)</th>
                        <th>@Model.Sum(c => c.Employees_personnel)</th>
                        <th>@Model.Sum(c => c.Workers_personnel)</th>
                        <th>@Model.Sum(c => c.Today_on_board_employees)</th>
                        <th>@Model.Sum(c => c.Today_on_board_workers)</th>
                        <th>@Model.Sum(c => c.Employees_personnel + c.Workers_personnel + c.Today_on_board_employees + c.Today_on_board_workers)</th>
                        <th>@Model.Sum(c => c.Need_personnel - (c.Employees_personnel + c.Workers_personnel + c.Today_on_board_employees + c.Today_on_board_workers))</th>
                        <th>@Model.Sum(c => c.Interview)</th>
                        <th class="workercolor totaldata"></th>
                        <th class="totaldata"></th>
                        <th class="workercolor totaldata"></th>
                        <th class="totaldata"></th>
                        <th class="workercolor totaldata"></th>
                        <th class="totaldata"></th>
                        <th class="workercolor totaldata"></th>
                        <th class="totaldata"></th>
                        <th class="workercolor totaldata"></th>
                        <th class="totaldata"></th>
                        <th class="totaldata"></th>
                        <th>@Model.Sum(c => c.Resigned_that_month)</th>
                        <th></th>
                        <th></th>
                    </tr>
                }
            }
        }
    </tbody>
</table>
