@model JianHeMES.Models.Personnel_Roster

@{
    ViewBag.Title = "删除员工记录";
}

<h4>你确定要删除此员工?</h4>
<div>
    <h4>删除员工记录</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.JobNum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobNum)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sex)
        </dt>

        <dd>
            @if (Model.Sex == false)
            {
                <span>女</span>
            }
            else if (Model.Sex == true)
            {
                <span>男</span>
            }
            @*@Html.DisplayFor(model => model.Sex)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>

        <dd>
            <span>@Model.DateOfBirth.ToString().Split(' ')[0]</span>
            @*@Html.DisplayFor(model => model.DateOfBirth)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Education)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DP_Group)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DP_Group)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HireDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HireDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.levelType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.levelType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OnPostMonth)
        </dt>

        <dd>
            @*<span>@Model.OnPostMonth.ToString().Split('.')[0]</span>*@
            @Html.DisplayFor(model => model.OnPostMonth)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-default" /> |
            @Html.ActionLink("返回查询页", "Index")
        </div>
    }
</div>
