<script>
    $(function () {
        var inibt = $("#BeginTime").val();
        var intet = $("#EndTime").val();
        inibt = inibt.replace(/-/g, "/");
        intet = intet.replace(/-/g, "/");
        $("#begin").val(inibt);
        $("#end").val(intet);

        $("#start_Date").datetimepicker({
            language: 'zh-CN',
            format: 'yyyy-mm-dd hh:ii:ss',//显示格式
            //minView: "month",//设置只显示到月份
            weekStart: 1, //一周从哪一天开始。0（星期日）到6（星期六）
            todayBtn: 1,
            autoclose: 1, //当选择一个日期之后是否立即关闭此日期时间选择器。
            todayHighlight: 1, //今天高亮
            startView: 2,
            forceParse: 0,
            pickerPosition: "bottom-left",
            showMeridian: 1
        }).on('changeDate', function (ev) {
            var bt = $("#start_input").val();
            bt = bt.replace(/-/g, "/");
            $("#BeginTime").val(bt);
            $("#begin").val(bt)
        });
        $("#end_Date").datetimepicker({
            language: 'zh-CN',
            format: 'yyyy-mm-dd hh:ii:ss',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            pickerPosition: "bottom-left",
            showMeridian: 1
        }).on('changeDate', function (ev) {
            var et = $("#end_input").val();
            et = et.replace(/-/g, "/");
            $("#EndTime").val(et);
            $("#end").val(et)
        });
    })
</script>
<div>
    @Html.ActionLink("返回", "SMT_ProductionData")
</div>
