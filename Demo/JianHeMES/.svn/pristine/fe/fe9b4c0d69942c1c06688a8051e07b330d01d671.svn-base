@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();

    string[] IController_Home = new string[] { "Home" };
    string[] IController_MES_Plans = new string[] { "ProductionPlans", "OrderMgms", "BarCodes", };
    string[] IController_HR = new string[] { "Personnel_Framework", "Personnel_of_Contrast", "Personnel_Roster", "Personnel_Recruitment", "Personnel_Turnoverrate" ,"Personnel"};
    string[] IController_MES_Excution = new string[] { "Assembles", "Burn_in", "CalibrationRecords", "Appearances", "SMT", "ProductionControl", "CourtScreenModuleInfoes", "IQCReports", "FinalQCs" };
    string[] IController_Environment = new string[] { "KongYa" };

    if (IController_Home.Contains(controller))
    {
        if (action == "Index")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else if (action == "Index2")
        {
            Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
        }
        else if (action == "MES_Excution")
        {
            Layout = "~/Views/Shared/_Layout_MES_Excution.cshtml";
        }
        else if (action == "MES_Plans")
        {
            Layout = "~/Views/Shared/_Layout_MES_Plans.cshtml";
        }
        else if (action == "MES_Excution")
        {
            Layout = "~/Views/Shared/_Layout_MES_Excution.cshtml";
        }
        else if (action == "HR")
        {
            Layout = "~/Views/Shared/_Layout_HR.cshtml";
        }
        else if (action == "Environment")
        {
            Layout = "~/Views/Shared/_Layout_Environment.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else if (IController_HR.Contains(controller))
    {
        Layout = "~/Views/Shared/_Layout_HR.cshtml";
    }
    else if (IController_MES_Plans.Contains(controller))
    {
        Layout = "~/Views/Shared/_Layout_MES_Plans.cshtml";
    }
    else if (IController_MES_Excution.Contains(controller))
    {
        Layout = "~/Views/Shared/_Layout_MES_Excution.cshtml";
    }
    else if (IController_Environment.Contains(controller))
    {
        Layout = "~/Views/Shared/_Layout_Environment.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
        //Layout = "~/Views/Shared/_Layout_HomePage.cshtml";
    }
}

