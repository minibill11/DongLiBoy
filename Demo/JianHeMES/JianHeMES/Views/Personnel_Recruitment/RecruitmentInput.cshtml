         function refrain(arr) {   //该方法返回数组重复元素
             var tmp = [];
             if (Array.isArray(arr)) {
                 arr.concat().sort().sort(function (a, b) {
                     if (a == b && tmp.indexOf(a) === -1) tmp.push(a);
                 });
             }
             return tmp;
         };
