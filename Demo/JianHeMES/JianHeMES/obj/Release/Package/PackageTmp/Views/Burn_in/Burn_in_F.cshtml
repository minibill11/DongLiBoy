@model JianHeMES.Models.Burn_in
@{
    ViewBag.Title = "完成老化工作";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="app" class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.OrderNum)
        @Html.HiddenFor(model => model.BarCodesNum)
        @Html.HiddenFor(model => model.OQCCheckBT)
        @Html.HiddenFor(model => model.Burn_in_OQCCheckAbnormal)
        @Html.HiddenFor(model => model.RepairCondition)
        <h3 class="hidden-xs">@ViewBag.Title</h3>
        <h3 class="text-center visible-xs">@ViewBag.Title</h3>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.OrderNum, htmlAttributes: new { @class = "control-label col-md-2 col-xs-4" })
            <div class="col-md-10 col-xs-8">
                @Html.DisplayFor(model => model.OrderNum)
                @Html.ValidationMessageFor(model => model.OrderNum, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BarCodesNum, htmlAttributes: new { @class = "control-label col-md-2 col-xs-4" })
            <div class="col-md-10 col-xs-8">
                @Html.DisplayFor(model => model.BarCodesNum)
                @Html.ValidationMessageFor(model => model.BarCodesNum, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.OQCCheckBT, htmlAttributes: new { @class = "control-label col-md-2 col-xs-4" })
            <div class="col-md-10 col-xs-8">
                @Html.DisplayFor(model => model.OQCCheckBT)
                @Html.ValidationMessageFor(model => model.OQCCheckBT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Burn_in_OQCCheckAbnormal, htmlAttributes: new { @class = "control-label col-md-2 col-xs-4" })
            <div class="col-md-4 col-xs-8">
                @Html.DisplayFor(model => model.Burn_in_OQCCheckAbnormal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Burn_in_OQCCheckAbnormal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="结束老化" class="btn btn-default" />
            </div>
        </div>
        <div>
            @Html.ActionLink("返回", "Index")
        </div>

        @*//防位移*@
        <div class="form-group"><div class="col-md-offset-2 col-md-10"></div></div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
