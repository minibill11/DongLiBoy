<script>
    var app = new Vue({
        el: "#app",
        data: {
            marqueeList: [],
            bgcolor: "background-color:rgba(97, 207, 52, 0.37)",
            //imgSrc: ""
        },
        computed: {
            sortmarqueeList() {
                return sortByActualProductionTime(this.marqueeList, "ActualProductionTime")
            }
        },
        created: function () {
        },
        methods: {
            Detail: function (val, station) {
                this.$options.methods.postForm("/ProductionControl/" + station, val);
            },
            orderDetail: function (val, station) {
                this.$options.methods.postForm("/OrderMgms/Details/" + station, val);
            },
            postForm: function (url, params) {
                var newForm = $("<form action=" + url + " target='_blank' method='post' style='display:none' ><input name='OrderNum' value=" + params + " ></form>");
                $("#setForm").append(newForm);
                newForm.submit();
                newForm.remove();
            },
            imgModal: function (OrderNumVal) {
                $("#imgModal").children().remove();
                $.ajax({
                    url: "/OrderMgms/GetImg",
                    type: "post",
                    data: {
                        ordernum: OrderNumVal,
                    },
                    success: function (returnVal) {
                        var json = JSON.parse(returnVal);
                        for (var img in json) {
                            $("#imgModal").append('<img src="/AOD_Files/' + OrderNumVal + '/' + json[img] + '" style="width:100%;" /><br /><br />')
                        }
                        $("#showModal").click();
                    },
                    error: function (err) {
                        alert("查看特采订单失败", err);
                    }
                })
                //this.imgSrc = "/OrderMgms/GetImg?ordernum=" + ordernum;
            }
        },
        mounted: function () {
            //this.$nextTick(function () {
            //    $("#content").show();
            //})
        },
        updated: function () {
            this.$nextTick(function () {
                //此处填每次渲染完后执行的代码
                $("#table_head th").each(function (index, value) {
                    var tempWidth = $(value)[0].getBoundingClientRect().width;
                    var tempHeight = $(value)[0].getBoundingClientRect().height;
                    $("#fixed_table th").eq(index).css({ 'width': tempWidth + "px", 'height': tempHeight + "px" });
                });
                $("#shelter").css('height', $("#table_head").height());
            });
        }
    })

    function sortByActualProductionTime(array, key) {
        return array.sort(function (a, b) {
            var x = a[key];
            var y = b[key];
            return ((x < y) ? -1 : ((x > y) ? 1 : 0))
        })
    }
</script>


