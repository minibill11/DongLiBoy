@{
    ViewBag.Title = "一楼温湿度";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/KongYaHT/Content/css.css" rel="stylesheet" />
@*<script src="~/Scripts/gauge.min.js"></script>*@
<script src="~/Scripts/jquery-1.11.3.js"></script>
<script src="~/Areas/KongYaHT/Script/highcharts.js"></script>
<script src="~/Areas/KongYaHT/Script/highcharts-more.js"></script>
<script src="~/Areas/KongYaHT/Script/meter1.js"></script>
<h2 class="text-center" style="color:#006FBD;font-weight: bold;">@ViewBag.Title</h2>

<style type="text/css">
    #floor1 {
        position: relative;
        width: 1172px;
        height: 18px;
        bottom: 200px;
    }

    #WS1 {
        position: relative;
        margin-left: 750px;
        bottom: -565px;
    }

    #container {
        position: absolute;
        left: -20px;
        bottom: 45px;
    }

    #container2{
        position: absolute;
        bottom: 45px;
        left: 35px;
    }

    #hider, #hider2 {
        position: absolute;
        left: -33px;
        bottom: 44px;
    }

    #f1, #f2 {
        display: none;
    }

    #GJB1,
    #GJB2 {
        color: red;
    }

    #floor1 a:hover, #floor1 a:active, #floor1 a:visited {
        text-decoration: none;
        color: rgb(51, 51, 51);
    }

    #floor1 a {
        display: block;
        width: 110px;
        color: rgb(51, 51, 51);
    }
</style>

<body style="background-color: #9D9D9D;">
    <div class="container body-content">
        <div>@Html.RouteLink("温湿度数据汇总", "KongYaHT", new { Controller = "KongYa", Action = "FloorDataShow" })</div>
        <div id="floor1">
            <div id="WS1">
                <div id="container" style="min-width: 70px; max-width: 100px; height: 70px; margin: 0 auto"></div>
                <div id="hider" class="hider" style="min-width: 150px; max-width: 170px; height: 150px; margin: 0px auto; z-index: 1; display: none;"></div>
                <div id="container2" style="min-width: 70px; max-width: 100px; height: 70px; margin: 0 auto"></div>
                <div id="hider2" class="hider2" style="min-width: 150px; max-width: 170px; height: 150px; margin: 0px auto; z-index: 1; display: none;"></div>
                <div style="font-size: 13px;font-weight:bolder;">
                    <a href="~/KongYaHT/KongYa/HTCharts?point=一楼篮球场" title="点击查看温湿度详情" target="_blank">
                        <font>温度：</font><font style="background-color:yellow"><span id="1F_temprature1">#</span> °C</font><br />
                        <font>湿度：</font><font style="background-color:yellow"><span id="1F_humidity1">#</span> %RH</font><br />
                        <font>状态：</font><span style="color:white;font-weight:normal" id="1F_state1">#</span>
                    </a>
                </div>
            </div>
        </div>

        <embed src="~/Areas/KongYaHT/image/1s1.svg">

        <div style="font-size:15px">
            根据中华人民共和国国家军用标准GJB 3007A-2009规定，防静电工作区环境条件要求：<br> 1.室温一般维持在
            <span id="GJB1">16℃～28℃</span>范围内，温度变化率小于5℃/h；<br> 2.室内相对湿度保持在
            <span id="GJB2">45%～70%</span>范围内，并不得结露。
        </div>
    </div>

    <input id="f1" value="" type="text" />
    <input id="f2" value="" type="text" />


    @section scripts {
        <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
        <script src="~/signalr/hubs"></script>
        <script>
            $(function () {
                var mypush = $.connection.Hub1;
                mypush.client.sendTH1 = function (TH1_json) {
                    var TH_40004493_1 = JSON.parse(TH1_json.TH_40004493_1);
                    $("#f1").val(TH_40004493_1.Tem);
                    $("#f2").val(TH_40004493_1.Hum);

                    //3F_点6
                    $("#1F_temprature1").html(TH_40004493_1.Tem);
                    $("#1F_humidity1").html(TH_40004493_1.Hum);
                    if (TH_40004493_1.Tem > 16 && TH_40004493_1.Tem < 28) {
                        if (TH_40004493_1.Hum > 45 && TH_40004493_1.Hum < 70) {
                            $("#1F_state1").html("正常").css("background", "green");
                        } else { $("#1F_state1").html("湿度警报").css("background", "red"); }
                    } else {
                        if (TH_40004493_1.Hum > 45 && TH_40004493_1.Hum < 70) {
                            $("#1F_state1").html("温度警报").css("background", "red");
                        } else { $("#1F_state1").html("温湿度警报").css("background", "red"); }
                    }
                };
                $.connection.hub.start();

            });
        </script>
    }


</body>