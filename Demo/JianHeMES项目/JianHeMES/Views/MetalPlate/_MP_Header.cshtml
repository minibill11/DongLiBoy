<script type="text/template" id="Mp_Header">
    <div class="sa-header">
        <div class="sa-title">{{active}}</div>
        <div class="sa-header-btn">
            <el-button v-for="(item,index) in header_list" :key="index" size="small" type="primary" :plain="active==item?false:true" @@click="skip(item)" style="border-bottom: none;font-size:14px;">{{item}}</el-button>
        </div>
        <hr class="style-one" />
    </div>
</script>
<script>
    Vue.component('mp-header', {
        props: ["active"],
        template: document.getElementById("Mp_Header"),
        data: function () {
            return {
                active: '',
                header_list: ['首页', '录入基本信息', '录入生产信息','修改录入信息','下载上传模板']
            }
        },
        methods: {
            skip(val) {
                if (val == '首页') {
                    window.location.href = "/MetalPlate/MetalPlate_Index"
                }
                if (val == '录入基本信息') {
                    window.location.href = "/MetalPlate/MetalPlate_CreatBasicInfo"
                }
                if (val == '录入生产信息') {
                    window.location.href = "/MetalPlate/MetalPlate_CreatProduction"
                } 
                if (val == '修改录入信息') {
                    window.location.href = "/MetalPlate/Modify"
                }
                if (val == '下载上传模板') {
                    window.location.href = "/DocumentTemplateFiles/Index"
                }
            }
        }
    });
</script>