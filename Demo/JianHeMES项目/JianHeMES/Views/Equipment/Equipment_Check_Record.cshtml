            cursor: pointer;
        }
        .red {
            background-color: #ff8590;
        }

        .el-upload__input {
            display: none !important;
        }

        .upload-demo {
            margin-left: 15px;
        }
        .td-title {
            padding:8px;
        }
        .td-small-title {
            text-align: center;
            font-size: 14px;
            font-weight: bold;
            padding: 8px;
        }
