
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-easyui-1.4.1/jquery.easyui.min.js"></script>
    <script src="~/Scripts/Biz/Biz.js"></script>
    <link href="~/Scripts/jquery-easyui-1.4.1/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/Scripts/jquery-easyui-1.4.1/themes/icon.css" rel="stylesheet" />
    <link href="~/Scripts/jquery-easyui-1.4.1/themes/color.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-easyui-1.4.1/locale/easyui-lang-zh_CN.js"></script>
    <link href="~/Content/Manage/_layout.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <script>

        $(function () {
            $('#tt').tabs({
                onLoad: function (panel) {
                    var plugin = panel.panel('options').title;
                    panel.find('textarea[name="code-' + plugin + '"]').each(function () {
                        var data = $(this).val();
                        data = data.replace(/(\r\n|\r|\n)/g, '\n');
                        if (data.indexOf('\t') == 0) {
                            data = data.replace(/^\t/, '');
                            data = data.replace(/\n\t/g, '\n');
                        }
                        data = data.replace(/\t/g, '    ');
                        var pre = $('<pre name="code" class="prettyprint linenums"></pre>').insertAfter(this);
                        pre.text(data);
                        $(this).remove();
                    });
                }
            });
        });
        //负责取出View片段的Html以及JS，JS一定要写在Id为content的容器里
        function open1(plugin, name) {
            if ($('#tt').tabs('exists', name)) { $('#tt').tabs('select', name); } else {
                $('#tt').tabs('add', {
                    title: name, href: "../../../WebManage/" + plugin + '/index', closable: true, extractor: function (data) {
                        data = $.fn.panel.defaults.extractor(data); var tmp = $('<div></div>').html(data);
                        data = tmp.find('#content').html();
                        tmp.remove();
                        return data;
                    }
                });
            }
        } </script>
</head>
<body class="easyui-layout">
    <div id="panel-top" region="north" border="true" class="cs-north top" style="background-color: deepskyblue">

        <div id="top-center">
            <div style="padding: 5px; float: right;">
                <a href="../../../Home/Index" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-cancel'">首页</a>
                <a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-reload'" onclick="$('#user-info-panel').dialog('open');">修改密码</a> <a href="../../../Manage/SignOut" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-search'">退出</a> <a href="#" class="easyui-linkbutton" data-options="plain:true">Text Button</a>
                <a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-print'">Print</a> <a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-help'"> </a><a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'"></a> <a href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-back'"></a>
            </div>
        </div>
    </div>
    <div id="panel-left" border="false" split="true" title="后台管理" data-options="region:'west'" style="width: 200px; margin: 0px; float: left" class=" cs-west">
        <div id="accordion" class="easyui-accordion">
            @Html.Partial("_PartialPageManageLeft")
        </div>
    </div>
    <div id="mainPanle" data-options="region:'center'" style="float: left;">
        <div id="tt" class="easyui-tabs" fit="true" border="false" plain="true">@RenderBody()</div>
    </div>
    <div style="display: none">
        <div id="user-info-panel" class=" easyui-dialog" title="修改密码" data-options="maximizable:true,resizable:true,closed:true">
            <div class="edit-form-table">
                <div class="edit-form-table">
                    <dl>
                        <dt>原密码：</dt>
                        <dd> <input type="password" name="OldPwd" id="OldPwd" /> </dd>
                    </dl> <dl>
                        <dt>新密码：</dt>
                        <dd>
                            <input type="password" name="NewPwd" id="NewPwd" />
                        </dd>
                    </dl> <dl>
                        <dt>重复新密码：</dt>
                        <dd>
                            <input type="password" name="NewPwdAgain" id="NewPwdAgain" />
                        </dd>
                    </dl> <dl>
                        <dt height="30"> <input id="UserId" name="UserId" type="hidden" /> </dt>
                        <dd>
                            <a href="#" class="easyui-linkbutton" icon="icon-ok" onclick="ResetPassword()">保存</a>
                            <a href="#" class="easyui-linkbutton" icon="icon-cancel" onclick=" javascript $('#dlgTUser').dialog('close')">取消</a>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</body>
</html>  