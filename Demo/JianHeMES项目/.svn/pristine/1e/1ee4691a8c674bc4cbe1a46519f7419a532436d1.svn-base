@{
    ViewBag.Title = "班组人员流失汇总表";
}
@* css放置处 *@
@section cssStyle {
    <link rel="stylesheet/less" type="text/css" href="~/Content/KPI/KPI_TeamEvaluation.less" />
    <style>
        .bottomInfo {
            padding: 5px 20px 20px;
            display: flex;
            justify-content: space-between;
        }

        .el-table__footer tbody td {
            background-color: #F0FAFF;
            border-top-color: rgba(64, 158, 255, 1);
            border-bottom-color: rgba(64, 158, 255, 1);
            font-weight: 700;
            z-index: 1;
        }

        .el-textarea {
            width: auto;
        }

        .el-table td .cell {
            padding: 0;
        }

            .el-table td .cell .el-input__inner {
                text-align: center;
            }

        .table-day {
            cursor: pointer;
        }

        .dialog-from-div {
            margin: 0;
            line-height: 30px;
            font-weight: 600;
        }

            .dialog-from-div .el-form-item__content {
                margin-left: 80px;
            }

            .dialog-from-div .el-form-item__label {
                width: 80px;
            }
    </style>
}

<el-container id="app" v-cloak>
    <el-header>
        <h1 class="title">{{show?'班组人员流失汇总表':'流失人数录入'}}</h1>
    </el-header>
    <el-main v-loading="loading">
        <kpi-departuresnum-component v-show="show"
                                     v-model="show"
                                     :inputlimit="inputlimit"
                                     :editlimit="editlimit"
                                     :departmentlist="Department.list"
                                     :grouplist="Group.list">
        </kpi-departuresnum-component>
        <kpi-departuresnum-input-component v-show="!show"
                                           v-model="show"
                                           :inputlimit="inputlimit"></kpi-departuresnum-input-component>
    </el-main>
</el-container>
@* 分部页放置处 *@
@section renderPage {
    @RenderPage("~/Views/Warehouse_Material/_wareEdit.cshtml")
    @RenderPage("_KPI_DeparturesNum.cshtml")
    @RenderPage("_KPI_DeparturesNum_Input.cshtml")
}
@* js放置处 *@
@section jsScript {
    <script src="~/Scripts/KPI/KPI_TeamEvaluation.js"></script>
    <script>
        const app = {
            mixins: [TeamEvaluation],
            data: function () {
                return {
                    show: true,
                    inputlimit: false,
                    editlimit: false,
                }
            },
            created() {
                this.inputlimit = this.islimit('班组人员流失录入');
                this.editlimit = this.islimit('修改班组流失数据');
            }
        };
    </script>
}

