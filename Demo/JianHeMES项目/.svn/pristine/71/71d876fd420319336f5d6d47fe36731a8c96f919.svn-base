@model JianHeMES.Models.Users

@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/axios.min.js"></script>
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(m => m.UserNum)
        @Html.TextBoxFor(m => m.UserNum, new { @class = "form-control", placeholder = "请输入员工编号", autofocus = "autofocus" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PassWord)
        @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", placeholder = "请输入密码" })
    </div>

    <div>
        <div style="width:280px;">

            <div class="btn-group pull-right">
                <input type="submit" formmethod="post" class="btn btn-primary" id="btnLogin" value="登录">
                @*<input type="button" class="btn btn-default" id="btnRegister" value="Register">
                    <a href="../Account/Register">Register</a>*@
            </div>

        </div>
    </div>
    <div class="clearfix"></div>

}
@*<script>
        $("#btnRegister").click(function () {
            location.href = "@Url.Content("~/Users/Register")";
        });
    </script>*@
<script>
    $(function () {
        $("#UserNum").keypress(function (e) {
            if (e.which == 13) {// 判断所按是否回车键
                $("#PassWord").focus(); // 设置焦点
                return false;// 取消默认的提交行为
            }
        });
    });
</script>