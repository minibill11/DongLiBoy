
.baseline {
    position: absolute;
    border-radius: 2px;
    opacity: 0.6;
    margin-top: -7px;
    height: 12px;
    background: rgba(232, 74, 95, 0.7);
    border-radius: 8px;
    border: 1px solid #e84a5f;
}

/* move task lines upper */
.gantt_task_line,
.gantt_line_wrapper {
    margin-top: -9px;
}

.gantt_side_content {
    margin-bottom: 7px;
}

.gantt_task_link .gantt_link_arrow {
    margin-top: -12px
}

.gantt_side_content.gantt_right {
    bottom: 0;
}

/*显示进度*/
.gantt_task_progress {
    text-align: left;
    padding-left: 10px;
    box-sizing: border-box;
    color: white;
    font-weight: bold;
}
/*周末设置颜色*/
.weekend {
    background-color: rgb(231, 246, 231);
}

.gantt_selected .weekend {
    background: #703ab730;
}
/*提示工具*/
.gantt_tooltip {
    font-size: 14px;
    line-height: 25px;
}
/*按钮*/
.fa {
    cursor: pointer;
    font-size: 14px;
    text-align: center;
    opacity: 0.2;
    padding: 5px;
    z-index:99 !important;
}

    .fa:hover {
        opacity: 1;
    }

.fa-pencil {
    color: #ffa011;
}

.fa-plus {
    color: #328EA0;
}

.fa-times {
    color: red;
}