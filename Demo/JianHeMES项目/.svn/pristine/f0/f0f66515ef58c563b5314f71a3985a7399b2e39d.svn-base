@{
    ViewBag.Title = "7S班组扣分详细";
}
@* css放置处 *@
@section cssStyle {
    <link href="~/Content/vxe.css" rel="stylesheet" />
    <style>
        #app {
            padding: 20px 20px 0 20px;
            font-family: '微软雅黑';
        }

        .title {
            font-weight: 400;
            font-size: 24px;
        }

        .action-box {
            width: 100%;
            padding: 20px 0;
            display: flex;
            align-content: center;
        }

            .action-box .el-select {
                margin-right: 10px;
            }
        /*    表格*/
        .table-height {
            width: 100%;
            height: 70vh;
        }
      
    </style>
}

<div id="app">
    <div class="title">
        7S班组扣分详细
    </div>

    @*操作栏*@
<div class="action-box">
    <el-select v-model="select_department" placeholder="请选择部门">
        <el-option v-for="item in department_options"
                   :key="item.value"
                   :label="item.label"
                   :value="item.value">
        </el-option>
    </el-select>
    <el-select v-model="select_district" placeholder="请选择班组">
        <el-option v-for="item in district_options"
                   :key="item.value"
                   :label="item.label"
                   :value="item.value">
        </el-option>
    </el-select>
    <el-date-picker v-model="select_date"
                    type="date"
                    placeholder="选择日期">
    </el-date-picker>
</div>

    @*表格*@
    <div class="table-height">
        <vxe-grid border
                  size="small"
                  height="auto"
                  align="center"
                  :columns="tableColumn"
                  :data="tableData">

        </vxe-grid>
    </div>
</div>
@* 分部页放置处 *@
@section renderPage {
}
@* js放置处 *@
@section jsScript {
    <script src="https://cdn.jsdelivr.net/npm/xe-utils"></script>
    <script src="https://cdn.jsdelivr.net/npm/vxe-table"></script>
    <script>
        const app = {
            data: function () {
                return {
                    select_department: '',
                    department_options: [],
                    select_district: '',
                    district_options: [],
                    select_date:'',
                    tableColumn: [
                        { title: '序号', type: 'seq', width: 50 },
                        { title: '检查时间', field: 'check_date' },
                        { title: '部门', field: 'Department' },
                        { title: '班组', field: 'Group'},
                        { title: '责任人', field: 'responsible' },
                        { title: '7S扣分类型', field: 'points_type' },
                        { title: '扣分参考标准', field: 'points_standard' },
                        { title: '问题描述', field: 'description' },
                        { title: '7S扣分', field: 'points' },
                        { title: '改善前', field: 'beforeImg' },
                        { title: '改善后', field: 'afterImg' },
                        { title: '完成时间', field: 'finish_time' },
                        { title: '整改结果', field: 'results' }
                    ],
                    tableData: []
                }
            },
            created: function () {
                var list = [];
                for (var index = 1; index < 20; index++) {
                    list.push({
                        id: index,
                        check_date: '2020-07-' + index,
                        Department: '总装' + index + '部',
                        Group: '模块' + index + '组',
                        responsible: 'name'+index,
                        points_type: index + 1,
                        points_standard: index + 2,
                        description: index + 3,
                        points: -index,
                        beforeImg: '',
                        afterImg: '',
                        finish_time: '2020-08-' + index,
                        results: index
                    })
                }
                this.tableData = list
            },
            mounted: function () {

            },
            watch: {
            },
            //函数方法
            methods: {
                //获取初始化下拉数据
                //查询数据
               
            }
        };
    </script>
}