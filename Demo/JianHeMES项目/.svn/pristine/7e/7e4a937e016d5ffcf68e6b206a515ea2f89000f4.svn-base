using Microsoft.Owin;
using Owin;
using System.Threading;
using JianHeMES.Controllers;
using System.Web.Hosting;

[assembly: OwinStartupAttribute(typeof(JianHeMES.Startup))]
namespace JianHeMES
{
    public partial class Startup
    {
        public void Configuration(IAppBuilder app)
        {
            ConfigureAuth(app);
            app.MapSignalR();
            CycleRuning cycleRuning = new CycleRuning();
            Thread Small_Sample_EmailSend = new Thread(new ThreadStart(cycleRuning.Small_Sample_EmailSend));
            Small_Sample_EmailSend.Start();
            Thread CheckHarvesterProgram = new Thread(new ThreadStart(cycleRuning.CheckHarvesterProgram));
            CheckHarvesterProgram.Start();
        }
    }
}
