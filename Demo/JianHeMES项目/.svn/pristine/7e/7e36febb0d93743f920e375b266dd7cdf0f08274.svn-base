        /// <summary>
        /// 登录
        /// </summary>
        /// <param name="loginRequest"></param>
        /// <returns></returns>
        [HttpPost]
        [Route("Login")]
        //public TokenInfo Login4([FromBody] LoginRequest loginRequest)
        public TokenInfo Login(string UserNumber, string Password)
        {
            TokenInfo tokenInfo = new TokenInfo();//需要返回的口令信息
            JObject UserInfo = new JObject();
            if (UserNumber != null)
            {
                int userNum = Convert.ToInt32(UserNumber);
                var user = db.Users.FirstOrDefault(u => u.UserNum == userNum && u.PassWord == Password);

                //string userName = loginRequest.UserName;
                //string passWord = loginRequest.Password;
                // bool isAdmin = (userName == "admin") ? true : false;
                string userName = UserNumber;
                string passWord = Password;
                bool isAdmin = user.Role == "系统管理员" ? true : false;

                UserInfo.Add("id", user.ID);
                UserInfo.Add("UserID", user.UserNum);
                UserInfo.Add("Name", user.UserName);
                UserInfo.Add("Role", user.Role);
                UserInfo.Add("Department", user.Department);

                //模拟数据库数据，真正的数据应该从数据库读取
                //身份验证信息
                AuthInfo authInfo = new AuthInfo { UserName = userName, Roles = new List<string> { "admin", "commonrole" }, IsAdmin = isAdmin, ExpiryDateTime = DateTime.Now.AddHours(2) };
                const string secretKey = "JianHeMES";//口令加密秘钥
                try
                {
                    byte[] key = Encoding.UTF8.GetBytes(secretKey);
                    IJwtAlgorithm algorithm = new HMACSHA256Algorithm();//加密方式
                    IJsonSerializer serializer = new JsonNetSerializer();//序列化Json
                    IBase64UrlEncoder urlEncoder = new JwtBase64UrlEncoder();//base64加解密
                    IJwtEncoder encoder = new JwtEncoder(algorithm, serializer, urlEncoder);//JWT编码
                    var token = encoder.Encode(authInfo, key);//生成令牌
                    //口令信息
                    tokenInfo.Success = true;
                    tokenInfo.Token = token;
                    tokenInfo.Message = "OK";
                    tokenInfo.UserInfo = JsonConvert.SerializeObject(UserInfo);
                }
                catch (Exception ex)
                {
                    tokenInfo.Success = false;
                    tokenInfo.Message = ex.Message.ToString();
                }
            }
            else
            {
                tokenInfo.Success = false;
                tokenInfo.Message = "用户信息为空";
            }
            return tokenInfo;
        }



