@{
    ViewBag.Title = "录入物料信息";
}
<link href="~/Content/styleFile/solder/solderStyle.css" rel="stylesheet" />
<link href="~/Content/styleFile/packaging/index.css" rel="stylesheet" />
<script src="~/Content/styleFile/packaging/index.js"></script>
<style>
    .container.body-content {
        width: 1350px;
    }

    .el-table th, .el-table td {
        font-size: 12px;
        text-align: center;
        padding: 5px 2px;
    }

        .el-table .cell, .el-table th div {
            padding: 0;
        }
</style>
<div id="app" v-cloak>
    <el-container>
        <el-header class="text-center">
            <div v-show="screenSize>=768">
                <h2 class="text-center">@ViewBag.Title</h2>
                <a href="/SMT_Sulderpaster/board"><el-button size="small">看板</el-button></a>
                <a href="/SMT_Sulderpaster/AddWarehouse_Material"><el-button size="small">录入物料信息</el-button></a>
                <a href="/SMT_Sulderpaster/AddWareHouseBaseInfo"><el-button size="small">锡膏入库</el-button></a>
                <a href="/SMT_Sulderpaster/AddWarehouseFreezer"><el-button size="small">锡膏入冰柜</el-button></a>
                <a href="/SMT_Sulderpaster/AddSMTFreezer"><el-button size="small">入SMT冰柜</el-button></a>
                <a href="/SMT_Sulderpaster/Rewarming"><el-button size="small">回温</el-button></a>
                <a href="/SMT_Sulderpaster/RewarmRecord"><el-button size="small">回温记录</el-button></a>
                <a href="/SMT_Sulderpaster/Stir"><el-button size="small">搅拌</el-button></a>
                <a href="/SMT_Sulderpaster/Use"><el-button size="small">使用</el-button></a>
                <a href="/SMT_Sulderpaster/recovery"><el-button size="small">回收</el-button></a>
            </div>
            <div v-show="screenSize<768">
                <h3>@ViewBag.Title</h3>
                <el-dropdown placement="bottom">
                    <el-button size="medium ">
                        更多菜单<i class="el-icon-arrow-down el-icon--right"></i>
                    </el-button>
                    <el-dropdown-menu slot="dropdown">
                        <a href="/SMT_Sulderpaster/board"><el-dropdown-item>看板</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/AddWarehouse_Material"><el-dropdown-item>录入物料信息</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/AddWareHouseBaseInfo"><el-dropdown-item>锡膏入库</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/AddWarehouseFreezer"><el-dropdown-item>锡膏入冰柜</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/AddSMTFreezer"><el-dropdown-item>入SMT冰柜</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/Rewarming"><el-dropdown-item>回温</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/RewarmRecord"><el-dropdown-item>回温记录</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/Stir"><el-dropdown-item>搅拌</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/Use"><el-dropdown-item>使用</el-dropdown-item></a>
                        <a href="/SMT_Sulderpaster/recovery"><el-dropdown-item>回收</el-dropdown-item></a>
                    </el-dropdown-menu>
                </el-dropdown>
            </div>
        </el-header>
        <el-main v-loading="loading">
            <el-row>
                <el-input type="textarea"
                          :rows="2"
                          placeholder="表格粘贴处..."
                          v-model="inputInfo"
                          resize="none"
                          style="float:left;width:280px;">
                </el-input>
                <div style="float:left;margin:0 20px">
                    <p>共有<span style="color:red;font-size:18px;">{{tableData.length}}</span>条数据！</p>
                    <p>
                        <el-button v-on:click="deleted" type="primary" size="mini">清空<i class="el-icon-delete el-icon--right"></i></el-button>
                        <el-button v-on:click="postdata" type="primary" size="mini" :disabled="tableData.length<=0">上传<i class="el-icon-upload el-icon--right"></i></el-button>
                    </p>
                </div>
            </el-row>
            <el-row>
                <el-table v-bind:data="tableData" max-height="600" border stripe>
                    <el-table-column prop="ManufactorNum" label="厂商编号" width="70">
                    </el-table-column>
                    <el-table-column prop="ManufactorName" label="厂商简称" width="60">
                    </el-table-column>
                    <el-table-column prop="InvoiceNum" label="收货单号" width="100">
                    </el-table-column>
                    <el-table-column prop="InvoiceTerm" label="收货项次" width="60">
                    </el-table-column>
                    <el-table-column prop="InvoiceDate" label="收货日期" width="60">
                    </el-table-column>
                    <el-table-column prop="MaterialNum" label="料件编号" width="80">
                    </el-table-column>
                    <el-table-column prop="ProductName" label="品名" width="70">
                    </el-table-column>
                    <el-table-column prop="Specifications" label="规格">
                    </el-table-column>
                    <el-table-column prop="PurchaseNum" label="采购单号" width="100">
                    </el-table-column>
                    <el-table-column prop="PurchaseCount" label="采购数量" width="60">
                    </el-table-column>
                    <el-table-column prop="REQNum" label="请购单号/项次" width="120">
                    </el-table-column>
                    <el-table-column prop="ReceivingCount" label="收货量" width="60">
                    </el-table-column>
                    <el-table-column prop="WarehouseCompany" label="入库单位" width="60">
                    </el-table-column>
                    <el-table-column prop="WarehouseCount" label="入库量" width="60">
                    </el-table-column>
                    <el-table-column prop="ReceivingMoney" label="收货金额" width="80">
                    </el-table-column>
                    <el-table-column label="操作" width="50">
                        <template slot-scope="scope">
                            <el-button v-on:click.native.prevent="deleteRow(scope.$index)"
                                       type="text"
                                       size="small">
                                移除
                            </el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </el-row>
        </el-main>
    </el-container>
</div>

<script>
    var app = new Vue({
        el: "#app",
        data: {
            loading: false,
            screenSize: document.body.clientWidth,
            inputInfo: "",
            tableData: []
        },
        created: function () {
            window.onresize = function () {
                app.screenSize = document.body.clientWidth;
            };
        },
        methods: {
            postdata() {
                axios.post("/SMT_Sulderpaster/Addwarehouse_Material", { warehouse_Material: this.tableData }).then(res => {
                    console.log(res.data)
                    if (res.data == "True") {
                        this.$message({
                            showClose: true,
                            duration: 5000,
                            dangerouslyUseHTMLString: true,
                            message: '<h4 style="margin:0">' + "上传" + this.tableData.length + "条数据成功！" + '</h4>',
                            type: 'success'
                        });
                        this.tableData = [];
                    } else {
                        this.$message({
                            message: "上传失败",
                            type: "warning"
                        });
                    };
                    //if ('repeat' in res.data) {
                    //    this.$message({
                    //        message: res.data.repeat,
                    //        type: "warning"
                    //    })
                    //} else if ('success' in res.data) {
                    //    this.$message({
                    //        message: res.data.success,
                    //        type: "success"
                    //    });
                    //    this.deleted();
                    //} else if ('fail' in res.data) {
                    //    this.$message({
                    //        message: res.data.fail,
                    //        type: "warning"
                    //    })
                    //}
                }).catch(err => {
                    this.$message({
                        message: "连接服务器失败！",
                        type: "warning"
                    });
                });
            },
            deleted() {
                this.inputInfo = "";
                this.tableData = [];
            },
            deleteRow(index) {
                this.tableData.splice(index, 1);
            },
            computedNum: function (val) {
                let thisVal = val.split(","), thisNum = "";

                for (let i in thisVal) {
                    thisNum += thisVal[i];
                }
                return thisNum;
            }
        },
        watch: {
            inputInfo(val) {
                if (val == "") {
                    return false;
                };
                //console.log(val)
                if (val.length > 1) {
                    this.tableData = [];
                };
                let valOfPaste = val.split("\n");
                valOfPaste.pop();
                let initDatas = []
                valOfPaste.forEach((item, i) => {
                    let items = item.split("\t");
                    initDatas.push(items)
                });
                initDatas.forEach(item => {
                    let obj = {
                        ManufactorNum: item[0], ManufactorName: item[1], InvoiceNum: item[2], InvoiceTerm: item[3], InvoiceDate: item[4], MaterialNum: item[5],
                        ProductName: item[6], Specifications: item[7], PurchaseNum: item[8], PurchaseCount: this.computedNum(item[9]), REQNum: item[10],
                        ReceivingCount: this.computedNum(item[11]), WarehouseCompany: item[12], WarehouseCount: this.computedNum(item[13]), ReceivingMoney: this.computedNum(item[14])
                    };
                    this.tableData.push(obj);
                })
                this.inputInfo = "";
            }
        },
    });
</script>