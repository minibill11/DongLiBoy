@{
    ViewBag.Title = "班组人员流失汇总";
}
@* css放置处 *@
@section cssStyle {
    <style>
        .el-table th > .cell {
            font-size: 14px;
        }

        .top_title {
            font-size: 24px;
            color: #293038;
            text-align: left;
        }
        /*统一表格字体*/
        .el-table thead {
            font-family: '微软雅黑 Bold', '微软雅黑';
            font-weight: 700;
            font-style: normal;
            color: #5E5E5E;
            height: 34px;
            background-color: rgba(228, 236, 248, 1);
        }

        .rightMain .rightMainContent {
            padding-top: 30px;
        }

        .table_top {
            margin-bottom: 20px;
        }

        .m_left {
            width: 240px !important;
            height: 40px;
        }
    </style>
}

<div id="app" v-cloak>
    <el-container>
        <el-header>
            <span class="top_title">流失人数确认</span>
        </el-header>
        <el-main>
            @*日期选择框 *@
            <el-row class="table_top">
                <el-date-picker class="m_left"
                                type="month"
                                size="medium"
                                style="width:150px;"
                                placeholder="请选择日期">
                </el-date-picker>
            </el-row>
            <el-row class="text-center">
                <el-table min-height="234"
                          max-height="560"
                          size="small"
                          align="center"
                          cell-class-name="cellParent"
                           :summary-method="getSummaries"
                          show-summary
                          stripe
                          border>
                    <el-table-column type="index"
                                     label="序号"
                                     align="center">
                        <template slot-scope="scope">
                            <span>{{scope.$index+1}}</span>
                        </template>
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="部门"
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="班组 "
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="考核指标名称"
                                     align="center"
                                     min-width="110">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="目标值"
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="月初人数"
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="月末人数"
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="月平均人数"
                                     align="center"
                                     min-width="100">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="流失人数"
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                </el-table>
            </el-row>
        </el-main>
    </el-container>
</div>
@* 分部页放置处 *@
@section renderPage {
}
