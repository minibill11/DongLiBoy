/*基础样式*/
*, body {
    margin: 0;
}

table {
    border-spacing: 0;
    border-collapse: collapse;
}
/* ----------------------------------- */
/* 定义变量 */
@red: #FF8590;
@blue: #409eff;
@green: #2bcfaa;
@font-color-shen: #293038;
@font-color-qian: #8ea0b8;
@bg-color-top: #293038;
@bg-color-left: #2f4056;
@bg-color-bottom: #eff2f7;
/* 定义方法 */
.clearA(@color: #638aca) {
    a, a:link, a:visited, a:hover, a:active {
        text-decoration: none;
        color: @color;
    }
}

.clearA();
/* ----------------------------------- */

/* toptitle */
.topTitle {
    display: inline-flex;
    justify-content: space-between;
    background: @bg-color-top;
    height: 40px !important;
    padding-left: 0;

    .title-top {
        display: inline-flex;
        justify-content: space-between;
        align-items: center;

        .title-img {
            width: 200px;
            height: 40px;
            border-right: 1px solid #FFF;
            display: flex;
            align-items: center;

            @media (max-width:992px) {
                width: 160px;
            }

            .logo, a {
                margin-left: 5px;
                height: 25px;
                cursor: pointer;
            }
        }

        .title-info {
            display: flex;
            align-items: center;
            margin-left: 10px;

            .hoverMenu {
                font-size: 20px;
                color: #FFF;
                cursor: pointer;
            }

            .el-page-header {
                display: flex;
                align-items: center;
                color: #AAA;

                .el-page-header__left::after {
                    right: -10px;
                    background-color: #aaa;
                }

                .el-page-header__left {
                    margin-right: 20px;
                }

                .el-icon-back {
                    font-size: 14px;
                    margin: 2px 2px 0px 7px;
                    height: 30px;
                    line-height: 30px;
                }

                .el-page-header__title {
                    display: flex;
                    align-items: center;
                    font-size: 12px;
                }

                .el-breadcrumb {
                    font-size: 12px;

                    .el-breadcrumb__inner {
                        color: #EEE;
                    }
                }
            }
        }
    }

    .topTitleComponent {
        display: inline-flex;
        align-items: center;

        .el-dropdown {
            color: #c1c1c1;
            margin: 0 10px;
            cursor: pointer;

            @media (max-width:992px) {
                margin: 0;
                padding: 0 10px;
            }

            .el-titleText {
                margin-left: 6px;
                margin-right: 12px;

                .badgeNum {
                    width: 15px;
                    height: 15px;
                    left: 1px;
                    bottom: 2px;

                    .el-badge__content {
                        font-size: 11px;
                        height: 15px;
                        line-height: 15px;
                        padding: 0 5px;
                        transition: All 0.4s ease-in-out;

                        &:hover {
                            transform: scale(1.2);
                        }
                    }
                }
            }

            .mobileIcon {
                margin: 0;
                width: auto;
            }
        }
    }
}

/* leftmenu */
.leftMenu {
    background: @bg-color-left;
    /*width: auto !important;*/
    width: 200px;
    max-width: 200px;
    overflow-x: hidden;

    .leftMenuComponent {
        height: e("calc(100vh - 50px)");
        overflow-x: hidden;
        overflow-y: auto;

        @media (min-width: 992px) {
            width: 212px;
        }
        /*&::-webkit-scrollbar {
            display: none;
        }*/
        .el-menu-item.is-active {
            color: @blue !important;
        }

        .el-menu {
            border-right: none;

            .el-menu-item, .menuItemComponent .el-submenu__title {
                padding: 0;
                height: 35px;
                line-height: 35px;
            }
        }
    }
}

.mobileLeftMenu {
    @media (max-width: 992px) {
        width: 100% !important;
        max-width: none;
    }
}
/* rightmain */
.rightMain {
    height: e("calc(100vh - 70px)");
    padding: 15px 30px;
    overflow: auto;

    @media (max-width: 992px) {
        padding: 5px 10px;
    }

    .el-header, .el-footer {
        height: auto !important;
        padding: 0;
    }

    .el-main {
        padding: 0;
    }

    #app .el-main {
        margin-top: 10px;
        margin-bottom:10px;
    }

    .text-center {
        text-align: center;
    }

    .red {
        color: @red;
    }

    .green {
        color: @green;
    }

    .blue {
        color: @blue;
    }
}

.mobileRightMain {
    @media (max-width: 992px) {
        display: none;
    }
}

/* bottominfo */
.bottomFooter {
    background: @bg-color-bottom;
    height: 30px !important;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    color: #8f9fb9;
}

/* element-ui 自定义 */
@table-border-color: #c9d3dd;
@table-header-hover: #e4ecf7;

.el-input__inner::placeholder {
    color: @font-color-qian;
}

.el-table {
    th, td {
        text-align: center;
        padding: 5px 0;

        .cell {
            padding: 0 5px;
        }
    }

    th, thead.is-group th {
        background-color: @table-header-hover;
    }

    .el-table__body tr:hover > td {
        background-color: @table-header-hover !important;
    }

    .zero-padding td {
        padding: 0;

        .cell {
            padding: 0;
        }
    }

    thead {
        color: #293038;
    }

    border-bottom: 1px solid @table-border-color;
}

.vxe-table .vxe-body--row:hover {
    background-color: @table-header-hover !important;
}

.el-table--border {
    th:first-child, td:first-child {
        .cell {
            padding: 0 5px;
        }
    }

    .zero-padding {
        td, td:first-child {
            padding: 0;

            .cell {
                padding: 0;
            }
        }
    }

    &::after {
        background-color: none;
    }

    border: 1px solid @table-border-color;
}

.el-table--striped .el-table__body tr.el-table__row--striped td {
    background-color: @bg-color-bottom;
}

.el-table--border::after, .el-table--group::after, .el-table::before {
    background-color: #FFF;
}

.el-table__fixed-footer-wrapper tbody td, .el-table__footer-wrapper tbody td, .el-table__header-wrapper tbody th {
    border-top: 1px solid @table-border-color;
    background-color: #ecf5ff;
    color: @font-color-shen;
}

.el-table--border th, .el-table__fixed-right-patch, .el-table td, .el-table th.is-leaf, .el-input__inner {
    border-color: @table-border-color;
}

.el-table__fixed-header-wrapper tr th:last-child, .el-table__fixed-body-wrapper tr td:last-child {
    border-right: none;
}

.el-button--success.is-plain {
    color: @green;
    background: #e6f8ea;
    border-color: #8cdfcb;
}

.el-button--success, .el-button--success.is-plain:hover, .el-button--success.is-plain:focus, .el-button--success:focus, .el-button--success:hover {
    background: @green;
    border-color: @green;
    color: #FFF;
}

.el-button.is-disabled {
    background-color: #ccd3de;
    border-color: #ccd3de;

    &:hover {
        background-color: #bbc2cc;
        border-color: #bbc2cc;
    }
}
/*  ---------------  */
@media screen and (max-width: 768px) {
    .el-message, .el-notification, .el-message-box, .el-dialog {
        min-width: 90% !important;
        max-width: 90% !important;
    }

    .el-select-dropdown__wrap {
        max-height: 82px !important;
    }

    .el-select-dropdown__item {
        font-size: 13px !important;
        height: 28px !important;
        line-height: 28px !important;
    }

    .el-select-dropdown__list {
        padding: 0 !important;
    }

    .el-autocomplete-suggestion, .el-scrollbar {
        padding: 0 !important;
        max-height: 100px !important
    }

    .el-autocomplete-suggestion__wrap {
        padding: 0 !important;
        max-height: 90px !important
    }

    .el-autocomplete-suggestion li {
        font-size: 13px !important;
        line-height: 26px !important;
    }
}
/* end */
