@{
    ViewBag.Title = "登录";
    //Layout = "~/Views/Shared/_Layout2.cshtml";
}


<script src="~/Scripts/axios.min.js"></script>

<style>
    .bigbox {
        position: relative;
        height: 100%;
        background: url(/Images/login_background_PC.jpg) no-repeat center center;
    }

        .bigbox .innerbox {
            position: fixed;
            left: 50%;
            top: 50%;
            margin-top: -190px;
            margin-left: -330px;
            float: left;
            width: 660px;
            height: 380px;
            background: center center no-repeat url(/Images/innerboxbg.jpg);
            background-size: 660px 260px;
        }

    .loginbox {
        position: fixed;
        left: 50%;
        top: 50%;
        margin-top: -180px;
        margin-left: 30px;
        width: 300px;
        height: 380px;
        background-color: #fff;
        box-shadow: 0px 8px 8px 4px rgba(0,0,0,.3);
        border-radius: 10px;
    }

        .loginbox .logo {
            float: right;
            width: 300px;
            height: 80px;
            background: center center no-repeat url(/Images/login-logo.png);
        }

        .loginbox .welcome {
            margin-left: 30px;
            color: #364862;
            text-align: left;
            font-size: 24px;
            font-family: 'Microsoft YaHei';
        }

        .loginbox .usernumbox {
            margin-left: 30px;
            width: 240px;
            height: 70px;
            border-bottom: 1px solid #364862;
            background: left center no-repeat url(/Images/login-icon-user.png);
            background-position: 0 40px;
        }

            .loginbox .usernumbox .usernum {
                margin-left: 30px;
                margin-top: 25px;
                padding-top: 10px;
                width: 200px;
                border: 0;
                line-height: 30px;
                text-align: left;
                background-color: none;
                color:darkgray;
            }

        .loginbox .pwdbox {
            margin-left: 30px;
            width: 240px;
            height: 70px;
            border-bottom: 1px solid #364862;
            background: left center no-repeat url(/Images/login-icon-password.png);
            background-position: 0 40px;
        }

            .loginbox .pwdbox .pwd {
                margin-left: 30px;
                margin-top: 30px;
                width: 200px;
                border: 0;
                line-height: 30px;
                text-align: left;
                background-color: none;
            }

        .loginbox .loginbtn {
            margin-top: 15px;
            margin-left: 40px;
            width: 220px;
            height: 40px;
            border: 0;
            color: #fff;
            border-radius: 20px;
            border-bottom-color: #2976f8;
            background-color: #2976f8;
            cursor: pointer;
        }

            .loginbox .loginbtn:hover {
                box-shadow: 0px 4px 4px 0px rgba(0,0,0,.3);
                color:yellow;
            }

        .loginbox .autologinforgetpwd {
            margin-top:5px;
            margin-left: 30px;
            font-family: 'Microsoft YaHei';
            font-size: 10px;
            color: #364862;
        }

            .loginbox .autologinforgetpwd .autologin {
                margin-top:5px;
            }

            .loginbox .autologinforgetpwd .autologintext {
                position:relative;
                top:-3px;
                font-size: 10px;
                color: #364862;
                line-height: 10px;
            }

            .loginbox .autologinforgetpwd .forgetpwd {
                margin-top:5px;
                text-decoration: none;
                float: right;
                color: #364862;
                margin-right: 30px;
            }

                .loginbox .autologinforgetpwd .forgetpwd:hover {
                    cursor:pointer;
                }

                .loginbox .download_exp {
                    margin-top: 20px;
                    margin-left: 30px;
                    font-size: 12px;
                    color: #364862;
                }

                    .loginbox .download_exp > a {
                        text-decoration: none;
                        font-size: 12px;
                        color: #364862;
                        cursor: pointer;
                    }
</style>

<div id="app">
    <div class="bigbox">
        <div class="innerbox">
        </div>
    </div>

    <div class="loginbox">
        <div class="logo"></div>
        <div class="welcome">欢迎登录</div>
        <div class="usernumbox">
            <input id="UserNum" class="usernum" value="请输入员工编号" />
        </div>
        <div class="pwdbox">
            <input id="PassWord" type="password" class="pwd" value="" />
        </div>

        <button class="loginbtn">登录</button>

        <div class="autologinforgetpwd">
            <input type="checkbox" class="autologin" /><span class="autologintext">自动登录</span>
            <span class="forgetpwd" click="showtips">忘记密码？</span>
        </div>
        <div class="download_exp">
            FireFox：
            <a href="~/MES_Data/Firefox Setup x64.exe">64位</a>，
            <a href="~/MES_Data/Firefox Setup x86.exe">32位</a>，
            <a href="~/MES_Data/Firefox Setup XP.exe">XP版</a>，
            <a href="~/MES_Data/ChromeCore_1277_3.0.1.6.exe"> Chrome</a>
        </div>
    </div>
</div>


<script>
    $(function () {
        $("#UserNum").keypress(function (e) {
            if (e.which == 13) {// 判断所按是否回车键
                $("#PassWord").focus(); // 设置焦点
                return false;// 取消默认的提交行为
            }
        });
    });

    var app = new Vue({
        el: '.app',
        data: {
            tips:'',
        },
        methods: {
            showtips() {
                this.$res.dialog.showtips(this.tips);
            }
        },

    })
</script>
