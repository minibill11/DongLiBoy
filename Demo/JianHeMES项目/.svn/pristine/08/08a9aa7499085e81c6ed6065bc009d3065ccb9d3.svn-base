@{
    ViewBag.Title = "模组号规则删除审核";
}
<link href="~/Content/styleFile/packaging/index.css" rel="stylesheet" />
<script src="~/Content/styleFile/packaging/index.js"></script>
<style>
</style>
<div id="app" v-cloak>
    <el-container>
        <el-header class="text-center">
            <div v-show="screenSize>=768">
                <h2 class="text-center">@ViewBag.Title</h2>
            </div>
            <div v-show="screenSize<768">
                <h3>@ViewBag.Title</h3>
            </div>
        </el-header>
        <el-main v-loading="loading">
            <el-row>
                @*<div class="inputframe">
                        <span>订单号：</span>
                        <el-select v-model="selectVal" placeholder="输入内容可查询" filterable clearable size="medium">
                            <el-option v-for="item in selectOptions"
                                       :key="item.value"
                                       :value="item.value">
                            </el-option>
                        </el-select>
                    </div>*@
            </el-row>
            <el-row>
                <el-table :data="deleteList"
                          style="width:900px;margin:0 auto;"
                          max-height="600"
                          border>
                    <el-table-column prop="ordernum"
                                     label="条码号"
                                     width="200"
                                     align="center">
                    </el-table-column>
                    <el-table-column prop="message"
                                     label="待删信息">
                    </el-table-column>
                    <el-table-column label="操作"
                                     width="180"
                                     align="center">
                        <template slot-scope="scope">
                            <el-button @@click.native.prevent="deleteCancel(scope.$index,scope.row.ordernum)"
                                       type="danger"
                                       size="mini">
                                移除
                            </el-button>
                            <el-button @@click.native.prevent="deleteConfirm(scope.$index,scope.row.ordernum)"
                                       type="primary"
                                       size="mini">
                                确认删除
                            </el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </el-row>
        </el-main>
    </el-container>
</div>

<script>
    var app = new Vue({
        el: "#app",
        data: {
            loading: false,
            screenSize: document.body.clientWidth,
            selectOptions: [],
            selectVal: '',
            deleteList: []
        },
        created: function () {
            window.onresize = function () {
                app.screenSize = document.body.clientWidth;
            };
            axios.post('/Packagings/GetOrderList').then(res => {
                this.selectOptions = res.data;
            }).catch(err => {
                console.warn("获取选择列表失败")
            });
        },
        mounted: function () {
            let localOrder = localStorage.getItem('Order');
            if (localOrder != null) {
                this.selectVal = localOrder;
            };
            this.getDeleteList();
        },
        methods: {
            //获取待审核清单
            getDeleteList: function () {
                this.loading = true;
                this.deleteList = [];
                axios.post('/Appearances/DisplayOrdernum').then(res => {
                    //console.log(res.data);
                    if (res.data == "" || res.data == null) {
                        this.deleteList = [];
                    } else {
                        this.deleteList = res.data;
                    };
                    this.loading = false;
                }).catch(err => {
                    console.warn("获取数据失败")
                    this.loading = false;
                });
            },
            //取消删除
            deleteCancel: function (index, order) {
                this.$confirm('是否撤销此删除申请？', "请确认", {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning',
                }).then(() => {
                    axios.post('/Appearances/CancelDelete', { ordernum: order }).then(res => {
                        this.getDeleteList();
                        this.$message({
                            showClose: true,
                            message: '移除成功！',
                            type: 'success'
                        });
                    }).catch(err => {
                        console.warn("获取数据失败")
                    });
                }).catch(() => {

                });
            },
            //确认删除
            deleteConfirm: function (index, order) {
                this.$confirm('是否确认删除此订单记录！', "请确认", {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning',
                }).then(() => {
                    axios.post('/Appearances/DeleteMoudleRuleAsync', { ordernum: order }).then(res => {
                        //console.log(res.data);
                        if (res.data == "True") {
                            this.getDeleteList();
                            this.$message({
                                showClose: true,
                                message: '删除成功！',
                                type: 'success'
                            });
                        } else {
                            this.$message({
                                showClose: true,
                                message: '删除失败！',
                                type: 'error'
                            });
                        };
                    }).catch(err => {
                        console.warn("获取数据失败")
                    });
                }).catch(() => {

                });
            }
        },
        watch: {
            selectVal: function (v) {
                localStorage.setItem('Order', v);
            },
        },
    });
</script>