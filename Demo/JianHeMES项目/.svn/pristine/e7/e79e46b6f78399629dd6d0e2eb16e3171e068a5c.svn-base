@*
    仓库物料菜单
*@
<script type="text/template" id="moduleMenuComponent">
    <el-row class="moduleMenu">
        <h3 style="margin:0">{{title}}</h3>
        <el-menu v-show="screenSize>=768"
                 :default-active="name"
                 @@select="handleSelect"
                 mode="horizontal">
            <el-menu-item index="QueryData">物料看板</el-menu-item>
            <el-menu-item index="MaterialBasicInfo">仓库入库信息</el-menu-item>
            <el-menu-item index="MaterialInput">入库</el-menu-item>
            <el-menu-item index="Material_Outbound">出库</el-menu-item>
            <el-menu-item index="Index">物料查询</el-menu-item>
        </el-menu>
        <el-dropdown v-show="screenSize<768" placement="bottom" @@command="handleSelect" style="margin-top:5px;">
            <el-button size="small">
                更多菜单<i class="el-icon-arrow-down el-icon--right"></i>
            </el-button>
            <el-dropdown-menu slot="dropdown">
                <el-dropdown-item command="QueryData">物料看板</el-dropdown-item>
                <el-dropdown-item command="MaterialBasicInfo">仓库入库信息</el-dropdown-item>
                <el-dropdown-item command="MaterialInput">入库</el-dropdown-item>
                <el-dropdown-item command="Material_Outbound">出库</el-dropdown-item>
                <el-dropdown-item command="Index">物料查询</el-dropdown-item>
            </el-dropdown-menu>
        </el-dropdown>
    </el-row>
</script>
<script>
    Vue.component('module-menu-component', {
        props: ['name', 'title'],
        template: document.getElementById("moduleMenuComponent"),
        data: function () {
            return {
                screenSize: document.body.clientWidth,//屏幕宽度
            }
        },
        methods: {
            handleSelect(key, keyPath) {
                location.href = `/Warehouse_Material/${key}`;
            }
        }
    });
</script>

