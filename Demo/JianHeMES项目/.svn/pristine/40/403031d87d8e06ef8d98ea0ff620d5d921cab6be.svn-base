/*基础样式*/
*, body {
    margin: 0;
}

table {
    border-spacing: 0;
    border-collapse: collapse;
}
/* ----------------------------------- */
/* 定义变量 */
@red: #FF8590;
@blue: #409eff;
@green: #2bcfaa;
@font-color-shen: #293038;
@font-color-qian: #8ea0b8;
@bg-color-top: #293038;
@bg-color-left: #2f4056;
@bg-color-bottom: #eff2f7;
/* 定义方法 */
.clearA(@color: #638aca) {
    a, a:link, a:visited, a:hover, a:active {
        text-decoration: none;
        color: @color;
    }
}

.clearA();
/* ----------------------------------- */

/* toptitle */
.topTitle {
    display: inline-flex;
    justify-content: space-between;
    background: @bg-color-top;
    height: 50px !important;

    .titleimg {
        display: inline-flex;
        justify-content: space-between;
        align-items: center;

        .hoverMenu {
            font-size: 30px;
            color: #fff;
            cursor: pointer;
        }

        .logo, a {
            margin-left: 5px;
            height: 30px;
            cursor: pointer;
        }
    }

    .topTitleComponent {
        display: inline-flex;
        align-items: center;

        .el-dropdown {
            color: #c1c1c1;
            margin: 0 10px;
            cursor: pointer;

            @media (max-width:992px) {
                margin: 0;
                padding: 0 10px;
            }

            .el-titleText {
                margin-left: 6px;
                margin-right: 12px;

                .badgeNum {
                    width: 15px;
                    height: 15px;
                    left: 1px;
                    bottom: 2px;

                    .el-badge__content {
                        font-size: 11px;
                        height: 15px;
                        line-height: 15px;
                        padding: 0 5px;
                        transition: All 0.4s ease-in-out;

                        &:hover {
                            transform: scale(1.2);
                        }
                    }
                }
            }

            .mobileIcon {
                margin: 0;
                width: auto;
            }
        }
    }
}

/* leftmenu */
.leftMenu {
    background: @bg-color-left;
    /*width: auto !important;*/
    max-width: 200px;

    .leftMenuComponent {
        height: e("calc(100vh - 50px)");
        overflow-x: hidden;
        overflow-y: auto;

        .el-menu {
            border-right: none;

            .el-menu-item, .menuItemComponent .el-submenu__title {
                padding: 0;
                height: 35px;
                line-height: 35px;
            }
        }
    }
}

.mobileLeftMenu {
    @media (max-width: 992px) {
        width: 100% !important;
        max-width: none;
    }
}
/* rightmain */
.rightMain {
    height: e("calc(100vh - 90px)");
    padding: 0;

    .rightMainTitle {
        z-index: 1;
        width: 100%;
        height: 30px;
        box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);

        .el-page-header {
            height: 30px;
            line-height: 30px;
            color: #888;

            .el-page-header__left::after {
                right: -10px;
            }

            .el-page-header__left {
                margin-right: 20px;
            }

            .el-icon-back {
                font-size: 14px;
                margin: 2px 2px 0px 7px;
                height: 30px;
                line-height: 30px;
            }

            .el-page-header__title {
                font-size: 12px;
            }

            .el-breadcrumb {
                height: 30px;
                line-height: 28px;
            }
        }
    }

    .rightMainContent {
        height: e("calc(100vh - 120px)");
        overflow: auto;
        padding-top: 5px;

        .el-header {
            height: auto !important;
        }

        .text-center {
            text-align: center;
        }

        .red {
            color: @red;
        }

        .green {
            color: @green;
        }

        .blue {
            color: @blue;
        }
    }
}

.mobileRightMain {
    @media (max-width: 992px) {
        display: none;
    }
}

/* bottominfo */
.bottomFooter {
    background: @bg-color-bottom;
    height: 40px !important;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    color: #8f9fb9;
}

/* element-ui 自定义 */
@table-border-color: #c9d3dd;
@table-header-hover: #e4ecf7;

.el-input__inner::placeholder {
    color: @font-color-qian;
}

.el-table {
    th, td {
        text-align: center;
        padding: 5px 0;

        .cell {
            padding: 0 5px;
        }
    }

    th, thead.is-group th, .el-table__body tr:hover > td {
        background-color: @table-header-hover !important;
    }

    .zero-padding td {
        padding: 0;

        .cell {
            padding: 0;
        }
    }

    thead {
        color: #293038;
    }

    border-bottom: 1px solid @table-border-color;
}


.el-table--border {
    th:first-child, td:first-child {
        .cell {
            padding: 0 5px;
        }
    }

    .zero-padding {
        td, td:first-child {
            padding: 0;

            .cell {
                padding: 0;
            }
        }
    }

    &::after {
        background-color: none;
    }

    border: 1px solid @table-border-color;
}

.el-table--striped .el-table__body tr.el-table__row--striped td {
    background-color: @bg-color-bottom;
}

.el-table--border::after, .el-table--group::after, .el-table::before {
    background-color: #FFF;
}

.el-table__fixed-footer-wrapper tbody td, .el-table__footer-wrapper tbody td, .el-table__header-wrapper tbody th {
    border-top: 1px solid @table-border-color;
    background-color: #ecf5ff;
    color: @font-color-shen;
}

.el-table--border th, .el-table__fixed-right-patch, .el-table td, .el-table th.is-leaf, .el-input__inner {
    border-color: @table-border-color;
}

.el-table__fixed-header-wrapper tr th:last-child, .el-table__fixed-body-wrapper tr td:last-child {
    border-right: none;
}
/*  ---------------  */
@media screen and (max-width: 768px) {
    .el-message, .el-notification, .el-message-box, .el-dialog {
        min-width: 90% !important;
        max-width: 90% !important;
    }

    .el-select-dropdown__wrap {
        max-height: 82px !important;
    }

    .el-select-dropdown__item {
        font-size: 13px !important;
        height: 28px !important;
        line-height: 28px !important;
    }

    .el-select-dropdown__list {
        padding: 0 !important;
    }

    .el-autocomplete-suggestion, .el-scrollbar {
        padding: 0 !important;
        max-height: 100px !important
    }

    .el-autocomplete-suggestion__wrap {
        padding: 0 !important;
        max-height: 90px !important
    }

    .el-autocomplete-suggestion li {
        font-size: 13px !important;
        line-height: 26px !important;
    }
}
/* end */
