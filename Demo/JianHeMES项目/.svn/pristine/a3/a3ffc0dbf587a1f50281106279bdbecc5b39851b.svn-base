.el-table th > .cell, .el-table td > .cell {
    padding: 0;
}

.text-center {
    text-align: center;
}

.el-table th, .el-table td {
    padding: 0;
}

.red {
    color: @red;
}

.green {
    color: @green;
}

#app .el-header {
    height: auto !important;
}
/* 定义变量 */
@red: #F56C6C;
@blue: #409EFF;
@green: #67C23A;

.borderColor(@bdc: #EBEEF5) {
    border-color: @bdc;
}

.headerBottomColor(@bbt: #EBEEF5) {
    color: @bbt;
    .borderColor(@bbt);
    /*box-shadow: 0 1px 6px 0 @bbt;*/
    .el-card__header {
        .borderColor(@bbt)
    }
}

/* 公用 */
.main {
    .flex-item {
        display: flex;
        flex-flow: row wrap;
        justify-content: flex-end;
        align-items: center;
        margin-bottom: 3px;
        padding-right: 10%;

        label {
            margin: 0 10px 0 0;
            color: #4f5155;
        }

        .el-form-item__error {
            top: auto;
            left: auto;
        }

        .tableframe {
            width: 300px;
        }
    }

    input, textarea, select, .el-input-number, .el-input, .el-slider {
        width: 220px;
    }
}
/* 菜单栏 */
.moduleMenu {
    .el-menu {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
    }

    .el-menu--horizontal > .el-menu-item {
        height: 40px;
        line-height: 40px;
    }

    h3 {
        text-align: center;
    }
}
/* 班组订单条码块 */
.main {
    .barcodeDiv {
        margin-bottom: 22px;
    }
}
/* 打印块 */
.nongduSlider {
    padding-right: 10px;
}
/* 条码状态块 */
.barcodeStateCard {
    text-align: center;

    .el-card {
        margin: 0 auto 10px;
        max-width: 250px;

        @media (min-width: 992px) {
            margin: 0 8px 8px;
        }
    }

    .el-card__header {
        padding: 8px 0;
    }

    .el-card__body {
        padding: 5px;
        overflow: auto;
        /* 屏幕小于992 */
        height: 200px;

        @media (min-width: 992px) {
            height: 400px;
        }
    }

    ul {
        list-style: none;
        padding: 0;
    }

    .notDo {
        .headerBottomColor(@red);
    }

    .notFinish {
        .headerBottomColor(@blue);
    }

    .finish {
        .headerBottomColor(@green);
    }
}
/* 异常块 */
.abnormalCard {
    margin: 0 auto;
    max-width: 600px;
    .borderColor(@red);

    .el-card__header {
        text-align: center;
        padding: 8px;
        font-size: 16px;
        .borderColor(@red);
    }

    .el-card__body {
        padding: 5px 15px;
        max-height: 450px;
        overflow: auto;
    }

    .el-divider--horizontal {
        margin: 5px 0 0;
        //background-color: @red;
    }

    .el-checkbox {
        margin: 0 10px 0 0;
    }
}

.abnormalUlLi {
    list-style: none;
    padding: 0;
    margin: 8px 0 0;

    li {
        height: 20px;
        line-height: 20px;
        color: @red;
    }
}
/* 装箱规则 */
.ruleTable {
    .ruleQuery {
        display: flex;
        flex-flow: row wrap;
        align-items: flex-end;
    }
}
/* end */
