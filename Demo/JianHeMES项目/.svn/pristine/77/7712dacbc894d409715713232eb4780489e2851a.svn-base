@{
    ViewBag.Title = "灯面生产看板";
}
<link href="~/Content/styleFile/packaging/index.css" rel="stylesheet" />
<script src="~/Content/styleFile/packaging/index.js"></script>
<script src="~/Scripts/echarts.js"></script>
<link href="~/Content/styleFile/SMT/smtContenInfo.css" rel="stylesheet" />
<script src="~/Content/styleFile/SMT/smtContenInfo.js"></script>
<div id="app" v-cloak>
    <el-drawer :visible.sync="drawerShow"
               :append-to-body="true"
               :close-on-press-escape="false"
               :show-close="false"
               :wrapperClosable="false"
               :withHeader="false"
               style="overflow:auto"
               direction="ttb"
               size="100%">
        <el-container>
            <el-header class="text-center">
                @*<a href="/SMT/DisplayICContenInfo"><el-button size="small">IC面生产看板</el-button></a>
                    <a href="/SMT/DisplayLightContenInfo"><el-button size="small">灯面生产看板</el-button></a>*@
                <el-row class="text-center">
                    <h2>
                        @ViewBag.Title
                        <el-date-picker v-model="postTime"
                                        :picker-options="pickerOptions"
                                        :editable="false"
                                        style="position:absolute;right:0;bottom:10px"
                                        placeholder="选择日期"
                                        value-format="yyyy-MM-dd"
                                        format="yyyy 年 MM 月 dd 日"
                                        align="right"
                                        size="small"
                                        type="date">
                        </el-date-picker>
                    </h2>
                </el-row>
            </el-header>
            <el-main class="body-color">
                <el-row :gutter="25">
                    <el-col :span="8" class="titleDiv-left">
                        <div class="achieveStatus">
                            <div>今班达成状况</div>
                            <div class="achieveStatusDiv">
                                <div>计划达成率</div>
                                <div>{{dataList.ProductionYield}}%</div>
                            </div>
                            <div class="achieveStatusDiv">
                                <div>生产良率</div>
                                <div>{{dataList.achievementRate}}%</div>
                            </div>
                        </div>
                    </el-col>
                    <el-col :span="8" class="titleDiv-center">
                        <div id="efficiencyBar"></div>
                    </el-col>
                    <el-col :span="8" class="titleDiv-right">
                        <div id="qualityBar"></div>
                    </el-col>
                    <el-col :span="24" style="margin-top:10px;">
                        <el-table :data="dataList.content" border>
                            <el-table-column prop="Line" label="线别" align="center" width="100">
                                <template slot-scope="scope">
                                    {{scope.row.Line}}线
                                </template>
                            </el-table-column>
                            <el-table-column prop="OrderNum" label="订单号" align="center" min-width="160">
                                <template slot-scope="scope">
                                    <div v-if="scope.row.OrderNum.split(',').length>1">
                                        <div v-for="item in scope.row.OrderNum.split(',')">{{item}}</div>
                                    </div>
                                    <div v-else>{{scope.row.OrderNum}}</div>
                                </template>
                            </el-table-column>
                            <el-table-column prop="totalNum" label="总数" align="center">
                            </el-table-column>
                            <el-table-column prop="Statu" label="生产状态" align="center">
                            </el-table-column>
                            <el-table-column prop="targetNum" label="目标投入" align="center">
                            </el-table-column>
                            <el-table-column prop="actualNum" label="实际产出" align="center">
                            </el-table-column>
                            <el-table-column prop="VeneerPoints" label="单板点数" align="center">
                            </el-table-column>
                            <el-table-column prop="PassRate" label="达成率" align="center">
                                <template slot-scope="scope">
                                    {{scope.row.PassRate}}%
                                </template>
                            </el-table-column>
                            <el-table-column prop="AbnormalCount" label="不良点数" align="center">
                            </el-table-column>
                            <el-table-column prop="DPPM" label="DPPM" align="center">
                            </el-table-column>
                        </el-table>
                    </el-col>
                </el-row>
            </el-main>
        </el-container>
    </el-drawer>
</div>
<script>
    var app = new Vue({
        el: "#app",
        mixins: [chartMixin],
        data: {
            dataList: {},
            postTime: "",
        },
        created: function () {
            this.getdata('DisplayLightContenInfo');
        },
        watch: {
            postTime(v) {
                if (this.isPoll(v)) {
                    this.poll = setInterval(() => {
                        this.getdata('DisplayLightContenInfo');
                    }, 5000);
                } else {
                    this.getdata('DisplayLightContenInfo');
                };
            }
        }
    });
</script>