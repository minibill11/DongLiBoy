@*  <summary>
    1.模组号规则删除功能页
    2.页面会列出当前申请了删除规则的订单清单
    3.点击删除按钮可进行删除规则
    4.若不同意删除规则，则可以撤销该订单申请
    </summary>*@
@{
    ViewBag.Title = "模组号规则删除审核";
}
@* css放置处 *@
@section cssStyle {
}
<div id="app" v-cloak>
    <el-container>
        <el-header class="text-center">
            <div v-show="screenSize>=768">
                <h2 class="text-center">@ViewBag.Title</h2>
            </div>
            <div v-show="screenSize<768">
                <h3>@ViewBag.Title</h3>
            </div>
        </el-header>
        <el-main class="main">
            <el-row>
                @*<div class="inputframe">
                        <span>订单号：</span>
                        <el-select v-model="selectVal" placeholder="输入内容可查询" filterable clearable size="medium">
                            <el-option v-for="item in selectOptions"
                                       :key="item.value"
                                       :value="item.value">
                            </el-option>
                        </el-select>
                    </div>*@
            </el-row>
            <el-row>
                @* 表格 *@
                <el-table :data="deleteList"
                          style="width:900px;margin:0 auto;"
                          max-height="600"
                          border>
                    <el-table-column prop="ordernum"
                                     label="条码号"
                                     width="200"
                                     align="center">
                    </el-table-column>
                    <el-table-column prop="message"
                                     label="待删信息">
                    </el-table-column>
                    <el-table-column label="操作"
                                     width="180"
                                     align="center">
                        <template slot-scope="scope">
                            <el-button @@click.native.prevent="deleteCancel(scope.$index,scope.row.ordernum)"
                                       type="danger"
                                       size="mini">
                                移除
                            </el-button>
                            <el-button @@click.native.prevent="deleteConfirm(scope.$index,scope.row.ordernum)"
                                       type="primary"
                                       size="mini">
                                确认删除
                            </el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </el-row>
        </el-main>
    </el-container>
</div>
@* 分部页放置处 *@
@section renderPage {
}
@* js放置处 *@
@section jsScript {
    <script>
        const app = {
            data: function () {
                return {
                    selectOptions: [],//订单号选择框下拉清单
                    selectVal: '',//订单号选择框的值
                    deleteList: []//需要删除的表格数据
                }
            },
            created: function () {
                //获取订单号选择框下拉清单
                axios.post('/Packagings/GetOrderList').then(res => {
                    this.selectOptions = res.data;
                }).catch(err => {
                    console.warn("获取选择列表失败")
                });
            },
            mounted: function () {
                //获取浏览器本地存储的订单号
                let localOrder = localStorage.getItem('Order');
                if (localOrder != null) {
                    this.selectVal = localOrder;
                };
                //获取表格数据
                this.getDeleteList();
            },
            methods: {
                //获取待审核清单
                getDeleteList: function () {
                    this.deleteList = [];
                    axios.post('/Appearances/DisplayOrdernum').then(res => {
                        //console.log(res.data);
                        if (res.data == "" || res.data == null) {
                            this.deleteList = [];
                        } else {
                            this.deleteList = res.data;
                        };
                    }).catch(err => {
                        console.warn("获取数据失败")
                    });
                },
                //撤销所点击订单的删除申请
                deleteCancel: function (index, order) {
                    this.$confirm('是否撤销此删除申请？', "请确认", {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        type: 'warning',
                    }).then(() => {
                        axios.post('/Appearances/CancelDelete', { ordernum: order }).then(res => {
                            this.getDeleteList();
                            this.$message({
                                showClose: true,
                                message: '移除成功！',
                                type: 'success'
                            });
                        }).catch(err => {
                            console.warn("获取数据失败")
                        });
                    }).catch(() => {

                    });
                },
                //确认删除
                deleteConfirm: function (index, order) {
                    this.$confirm('是否确认删除此订单记录！', "请确认", {
                        confirmButtonText: '确定',
                        cancelButtonText: '取消',
                        type: 'warning',
                    }).then(() => {
                        axios.post('/Appearances/DeleteMoudleRuleAsync', { ordernum: order }).then(res => {
                            //console.log(res.data);
                            if (res.data.result == true) {
                                this.getDeleteList();
                                this.$message({
                                    showClose: true,
                                    message: '删除成功！',
                                    type: 'success'
                                });
                            } else {
                                this.$message({
                                    showClose: true,
                                    message: res.data.message,
                                    type: 'error'
                                });
                            };
                        }).catch(err => {
                            console.warn("获取数据失败")
                        });
                    }).catch(() => {

                    });
                }
            },
            watch: {
                //监听选择框，每次选择后将值存储在浏览器本地
                selectVal: function (v) {
                    localStorage.setItem('Order', v);
                },
            },
        };
    </script>
}