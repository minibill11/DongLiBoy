@{
    //ViewBag.Title = "客诉损失明细按故障及平台分类查询";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@* css放置处 *@
@section cssStyle {
    <link rel="stylesheet/less" type="text/css" href="~/Content/styleFile/moduleManagement/module.less" />
    <style>
        .table-top {
            margin-bottom: 20px;
        }
        .m-right {
            margin-left: 10px;
            margin-right: 10px;
        }

    </style>
}

<div id="app" v-cloak>
    <el-container>
        <el-header class="text-center">
            <h3 class="top-title">客诉损失明细按故障及平台分类查询</h3>
        </el-header>
        <el-main>
            @*日期选择框 *@
            <el-row class="text-center table-top">
                <el-select v-model="queryCondition"
                           @@change="selectCondition"
                           placeholder="请选择查询方式"
                           size="medium"
                           style="width:120px;">
                    <el-option label="按年查询" value="y">
                    </el-option>
                    <el-option label="按年月查询" value="m">
                    </el-option>
                </el-select>

                <el-date-picker v-show="queryCondition=='y'"
                                class="m-right"
                                v-model="selectTime"
                                @@change="selectDate"
                                type="year"
                                size="medium"
                                style="width:150px;"
                                placeholder="选择年">
                </el-date-picker>

                <el-date-picker v-show="queryCondition=='m'"
                                class="m-right"
                                v-model="selectTime"
                                @@change="selectDate"
                                type="month"
                                size="medium"
                                style="width:150px;"
                                placeholder="选择年月">
                </el-date-picker>
                <el-button type="primary" v-on:click="queryData" size="medium">查询</el-button>
            </el-row>
            <el-row class="text-center">
