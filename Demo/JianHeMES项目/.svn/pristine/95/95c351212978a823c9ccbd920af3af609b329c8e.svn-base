<script>
    $(function () {

        axios.post("/Common/isCheckRole", { rolename: "人事日报管理", discription: "显示人事日报", name: this.userName, id: this.userId }).then(res=> {
            if (res.data == 'True') {

            } else {
                //$("#app").hide()
                var comfirm = confirm("没有权限查看此页面！")
                if (comfirm == true) {
                    window.history.back()
                }
                else {
                    window.history.back()
                }
            }
        }).catch(err=> {

        })



        showFileBtn();
        $('#uploadfile').change(function () {
            showFileBtn();
        });
    });
    function showFileBtn() {
        var fileInput = $('#uploadfile').get(0).files[0];
        if (fileInput) {
            $("#fileBtn").show();
        } else {
            $("#fileBtn").hide();
        };
    };
</script>

