#app {
    padding: 10px 0 0 0;

    .title {
        font-size: 25px;
        display: inline-block;
        font-weight: 400;
    }

    .eltable {
        margin: 15px 0;

        .zero-padding {
            td, td:first-child {
                padding: 10px;
            }

            .el-input__inner {
                border-color: #2bcfaa;
            }
        }

        .el-input__inner {
            text-align: center;
            height: 40px !important;
        }
    }

    .cbtn {
        text-decoration: underline;
        padding: 12px;
    }

    .cbtn.info {
        color: #555;
    }

    .el-table th {
        padding: 12px 0;
    }

    .el-input, .el-textarea__inner {
        width: auto;
    }

    .el-table {
        td, th {
            .cell {
                input, .el-input {
                    width: 100%;
                }
            }
        }
    }

    .table-top {
        margin-bottom: 10px;

        input {
            width: 150px;
        }

        .table-top-left {
            float: left;

            .el-textarea__inner {
                height: 36px;
            }
        }

        .table-top-right {
            float: right;
        }
    }

    .table-mid {
        margin-bottom: 10px;

        .cbtn.el-button--text {
            padding: 0px;
        }

        .el-input__inner {

        }
    }

    .table-bottom {
        .table-bottom-left {
            float: left;
        }

        .table-bottom-right {
            float: right;
        }
    }

    .addRowDia {
        .el-input__inner {
            width: 220px;
        }
    }

    .el-table__fixed-right::before, .el-table__fixed::before {
        background-color: #c6c6c6;
    }
}
