@{
    ViewBag.Title = "班组评优月度积分统计表";
}
@* css放置处 *@
@section cssStyle {
    <style>
        .el-table th > .cell {
            font-size: 14px;
        }

        .top_title {
            font-size: 24px;
            color: #293038;
            text-align: left;
        }
        /*统一表格字体*/
        .el-table thead {
            font-family: '微软雅黑 Bold', '微软雅黑';
            font-weight: 700;
            font-style: normal;
            color: #5E5E5E;
            height: 34px;
            background-color: rgba(228, 236, 248, 1);
        }
        .rightMain .rightMainContent {
            padding-top: 30px;
        }

        .table_top {
            display: flex;
            position: relative;
        }
        .table_left {
            display: flex;
        }
        .top_right{
            position:absolute;
            right:0;
            top:0;
        }
        .top_right .derivedForm .el-button--primary.is-plain {
            width: 123px;
            height:40px;
            border-color: rgba(140, 223, 203, 1);
            background-color: rgba(230, 248, 234, 1);
            font-size: 14px;
            color: #2BCFAA;
        }
        .top_right .derivedForm .el-button--medium:hover {
            background-color: rgba(43, 207, 170, 1);
            color: #fff;
        }
        .bt_flex .el-input__inner {
            width: 160px;
            height: 40px;
            margin-right: 10px;
        }

        .table_top .el-button--small {
            width: 60px;
            height: 40px;
            font-size: 14px;
            margin-left: 5px;
        }

        .table_top .el-input__icon {
            width: 41px;
        }

        .el-table_1_column_17 {
            background-color: rgba(64, 158, 255, 1) !important;
            border-color: rgba(64, 158, 255, 1);
            font-family: '微软雅黑 Bold', '微软雅黑';
            font-weight: 700;
            font-size: 14px;
            color: #fff;
        }
    </style>
}

<div id="app" v-cloak>
    <el-container>
        <el-header>
            <span class="top_title">班组评优月度积分统计表</span>
        </el-header>
        <el-main>
            <el-row class="table_top">
                <div class="table_left">
                    <el-form class="bt_flex">
                        <el-form-item>
                            <el-select placeholder="请选择部门">
                                <el-option v-for="item in options"
                                           :key="item.value"
                                           :label="item.label"
                                           :value="item.value">
                                </el-option>
                            </el-select>
                        </el-form-item>
                    </el-form>
                    <el-form class="bt_flex">
                        <el-form-item>
                            <el-select placeholder="请选择班组">
                                <el-option v-for="item in options"
                                           :key="item.value"
                                           :label="item.label"
                                           :value="item.value">
                                </el-option>
                            </el-select>
                        </el-form-item>
                    </el-form>
                    <el-button class="btnIfo" type="primary" size="small">查询</el-button>
                </div>
                <div class="top_right">
                    <a href="###" class="derivedForm"><el-button type="primary" size="medium" plain>导出EXCEL表</el-button></a>
                </div>
            </el-row>
            <el-row class="text-center">
                <el-table min-height="234"
                          max-height="560"
                          size="small"
                          align="center"
                          cell-class-name="cellParent"
                          stripe
                          border>
                    <el-table-column prop="SerialNumber"
                                     label="序号"
                                     min-width="52"
                                     height="100">
                    </el-table-column>
                    <el-table-column prop="Department"
                                     label="部门"
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                    <el-table-column prop="Group"
                                     label="班组"
                                     align="center"
                                     min-width="78">
                    </el-table-column>
                    <el-table-column prop="CustomerName"
                                     label="积分得分情况"
                                     align="center"
                                     min-width="78">
                        <el-table-column prop="CustomerName"
                                         label="1月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="2月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="3月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="4月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="5月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="6月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="7月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="8月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="9月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="10月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="11月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                        <el-table-column prop="CustomerName"
                                         label="12月"
                                         align="center"
                                         min-width="78">
                        </el-table-column>
                    </el-table-column>
                    <el-table-column prop="TotalPoints"
                                     label="年度积分合计"
                                     align="center"
                                     min-width="130">
                    </el-table-column>
                </el-table>
            </el-row>
        </el-main>
    </el-container>
</div>
