/*基础样式*/
.body-content, .container {
    padding-left: 0px;
    padding-right: 0px;
}

.el-header {
    height: auto !important;
}

.el-header, .el-main {
    padding: 8px 0 3px;
}

.el-main {
    min-height: 600px;
}

[v-cloak] {
    display: none;
}

/* 定义变量 */
@red: #F56C6C;
@blue: #409EFF;
@green: #67C23A;

.borderColor(@bdc: #EBEEF5) {
    border-color: @bdc;
}

.headerBottomColor(@bbt: #EBEEF5) {
    color: @bbt;
    .borderColor(@bbt);
    /*box-shadow: 0 1px 6px 0 @bbt;*/
    .el-card__header {
        .borderColor(@bbt)
    }
}

/* 公用 */
.main {
    .flex-item {
        display: flex;
        flex-flow: row wrap;
        justify-content: flex-end;
        align-items: center;
        margin-bottom: 3px;
        padding-right: 10%;

        label {
            margin: 0 10px 0 0;
            color: #4f5155;
        }

        .el-form-item__error {
            top: auto;
            left: auto;
        }

        .tableframe {
            width: 300px;
        }
    }

    input, textarea, select, .el-input-number, .el-input, .el-slider {
        width: 220px;
    }
}
/* 菜单栏 */
.moduleMenu {
    .el-menu {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
    }

    .el-menu--horizontal > .el-menu-item {
        height: 40px;
        line-height: 40px;
    }

    h3 {
        text-align: center;
    }
}
/* 班组订单条码块 */
.main {
    .barcodeDiv {
        margin-bottom: 22px;
    }
}
/* 打印块 */
.nongduSlider {
    padding-right: 10px;
}
/* 条码状态块 */
.barcodeStateCard {
    .el-card {
        margin: 0 auto 10px;
        max-width: 250px;

        @media (min-width: 992px) {
            margin: 0 8px 8px;
        }
    }
    .notDo {
        .headerBottomColor(@red);
    }
}

/* end */
