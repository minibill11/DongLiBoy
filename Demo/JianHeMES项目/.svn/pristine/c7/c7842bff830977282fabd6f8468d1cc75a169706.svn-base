@{
    ViewBag.Title = "模板文档";
}
@* css放置处 *@
@section cssStyle {
    <style>
        .list-table {
            margin: 10px auto 0;
            width: 800px;
        }

        .left-name > .cell {
            text-align: left;
            padding-left: 20px !important;
        }
    </style>
}
<div id="app" v-cloak>
    <el-container>
        <el-header class="text-center">
            <h2>模板文档</h2>
        </el-header>
        <el-main class="main">
            <el-row>
                <el-table v-bind:data="tableList"
                          max-height="600"
                          class="list-table">
                    <el-table-column prop="filename"
                                     width="650"
                                     class-name="left-name"
                                     label="模板文件名">
                    </el-table-column>
                    <el-table-column label="操作">
                        <template slot-scope="scope">
                            <el-button type="primary" @@click="getFileUrl(scope.row.filename)" size="mini">详细</el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </el-row>
        </el-main>
    </el-container>
</div>
@* 分部页放置处 *@
@section renderPage {
}
@* js放置处 *@
@section jsScript {
    <script>
        const app = {
            data: function () {
                return {
                    tableList: [],
                }
            },
            mounted() {
                this.getFileList();
            },
            methods: {
                // 获取文件列表
                getFileList() {
                    axios.post("/api/DocumentTemplateFiles_Api/DocumentTemplateFilesFolderInDirectory").then(res => {
                        //console.log(res.data);
                        if (res.data.Result) {
                            this.$message.success(res.data.Message);
                            let list = [];
                            for (let i of JSON.parse(res.data.Data)) {
                                list.push({ filename: i });
                            };
                            this.tableList = list;
                        } else {
                            this.$message.error(res.data.Message);
                        };
                    }).catch(err => {
                        console.log('后台报错');
                    });
                },
                //获取文件地址
                getFileUrl(name) {
                    axios.post("/api/DocumentTemplateFiles_Api/DocumentTemplateFile", { filename: name }).then(res => {
                        //console.log(res.data);
                        if (res.data.Result) {
                            this.$message.success(res.data.Message);
                            window.open(res.data.Data)
                        } else {
                            this.$message.error(res.data.Message);
                        }
                    }).catch(err => {
                        console.log('后台报错');
                    });
                }

            },
        };
    </script>
}