        #region --------------------上传请假文件(jpg、pdf)方法
        [HttpPost]
        public ActionResult UploadLeavefile(string userneme, string leavestarttime)
        {
            if (Request.Files.Count > 0)
            {
                HttpPostedFileBase file = Request.Files["uploadfile"];
                var fileType = file.FileName.Substring(file.FileName.LastIndexOf(".")).ToLower();
                var re = String.Equals(fileType, ".jpg") == true || String.Equals(fileType, ".jpeg") || String.Equals(fileType, ".pdf") == true ? false : true;
                if (re)
                {
                    return Content("<script>alert('您选择文件的文件类型不正确，请选择jpg、jpeg或pdf类型文件！');history.go(-1);</script>");
                }
                string ReName = leavestarttime + "_Leavefile";
                if (Directory.Exists(@"D:\MES_Data\Leavefile_Files\" + leavestarttime + "\\") == false)//如果不存在就创建订单文件夹
                {
                    Directory.CreateDirectory(@"D:\MES_Data\Leavefile_Files\" + leavestarttime + "\\");
                }
                file.SaveAs(@"D:\MES_Data\Leavefile_Files\" + leavestarttime + "\\" + ReName + fileType);
                return Content("<script>alert('上传成功！');window.location.href='../leavestarttime/Details/" + userneme + "';</script>");
            }
            return Content("<script>alert('上传失败');history.go(-1);</script>");
        }
