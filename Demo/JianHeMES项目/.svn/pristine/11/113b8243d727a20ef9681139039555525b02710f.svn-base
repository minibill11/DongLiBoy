@{
    ViewBag.Title = "IC面生产看板";
}
<link href="~/Content/styleFile/packaging/index.css" rel="stylesheet" />
<script src="~/Content/styleFile/packaging/index.js"></script>
<script src="~/Scripts/echarts.js"></script>
<link href="~/Content/styleFile/SMT/smtContenInfo.css" rel="stylesheet" />
<script src="~/Content/styleFile/SMT/smtContenInfo.js"></script>
<div id="app" v-cloak>
    <el-drawer :visible.sync="drawerShow"
               :append-to-body="true"
               :close-on-press-escape="false"
               :show-close="false"
               :wrapperClosable="false"
               :withHeader="false"
               direction="ttb"
               size="100%">
        <el-container>
            <el-header class="text-center">
                <el-row class="text-center">
                    <h2>@ViewBag.Title</h2>
                    <a href="/SMT/DisplayICContenInfo"><el-button size="small">IC面生产看板</el-button></a>
                    <a href="/SMT/DisplayLightContenInfo"><el-button size="small">灯面生产看板</el-button></a>
                    <el-date-picker v-model="postTime"
                                    :picker-options="pickerOptions"
                                    placeholder="选择日期"
                                    value-format="yyyy-MM-dd"
                                    format="yyyy 年 MM 月 dd 日"
                                    align="right"
                                    size="small"
                                    type="date">
                    </el-date-picker>
                    <el-button v-on:click="getdata" type="primary" size="small" :loading="loading">查找</el-button>
                    <el-button v-on:click="allScreen" type="danger" size="small">全屏</el-button>
                </el-row>
            </el-header>
            <el-main class="body-color">
                <el-row :gutter="25">
                    <el-col :span="8" class="titleDiv-left">
                        <div class="achieveStatus">
                            <div>今班达成状况</div>
                            <div class="achieveStatusDiv">
                                <div>计划达成率</div>
                                <div>{{dataList.ProductionYield}}%</div>
                            </div>
                            <div class="achieveStatusDiv">
                                <div>生产良率</div>
                                <div>{{dataList.achievementRate}}%</div>
                            </div>
                        </div>
                    </el-col>
                    <el-col :span="8" class="titleDiv-center">
                        <div id="efficiencyBar"></div>
                    </el-col>
                    <el-col :span="8" class="titleDiv-right">
                        <div id="qualityBar"></div>
                    </el-col>
                    <el-col :span="24" style="margin-top:10px;">
                        <el-table :data="dataList.content" border>
                            <el-table-column prop="Line" label="线别" align="center" width="80">
                                <template slot-scope="scope">
                                    {{scope.row.Line}}线
                                </template>
                            </el-table-column>
                            <el-table-column prop="OrderNum" label="订单号" align="center">
                            </el-table-column>
                            <el-table-column prop="totalNum" label="总数" align="center" width="120">
                            </el-table-column>
                            <el-table-column prop="Statu" label="生产状态" align="center">
                            </el-table-column>
                            <el-table-column prop="targetNum" label="目标投入" align="center" width="120">
                            </el-table-column>
                            <el-table-column prop="actualNum" label="实际产出" align="center" width="120">
                            </el-table-column>
                            <el-table-column prop="accessRate" label="达成率" align="center" width="100">
                            </el-table-column>
                            <el-table-column prop="AbnormalCount" label="不良数" align="center" width="100">
                            </el-table-column>
                            <el-table-column prop="PassRate" label="良率" align="center" width="100">
                            </el-table-column>
                        </el-table>
                    </el-col>
                </el-row>
            </el-main>
        </el-container>
    </el-drawer>
</div>
<script>
    var app = new Vue({
        el: "#app",
        data: {
            loading: false,
            dataList: {},
            postTime: "",
            drawerShow: true,
            pickerOptions: {
                disabledDate(time) {
                    return time.getTime() > Date.now();
                },
                shortcuts: [{
                    text: '今天',
                    onClick(picker) {
                        picker.$emit('pick', new Date());
                    }
                }, {
                    text: '昨天',
                    onClick(picker) {
                        const date = new Date();
                        date.setTime(date.getTime() - 3600 * 1000 * 24);
                        picker.$emit('pick', date);
                    }
                }, {
                    text: '一周前',
                    onClick(picker) {
                        const date = new Date();
                        date.setTime(date.getTime() - 3600 * 1000 * 24 * 7);
                        picker.$emit('pick', date);
                    }
                }]
            },
            efficiencyChart: "",
            qualityChart: "",
        },
        created: function () {
            this.getdata();
        },
        mounted: function () {
            //echart折线图配置
            var chartOption = {
                title: {
                    left: 'center'
                },
                tooltip: {
                    trigger: 'axis'
                },
                xAxis: {
                    type: 'category'
                },
                yAxis: {
                    type: 'value',
                    axisLabel: {
                        formatter: '{value} %'
                    }
                },
                series: [{
                    name: "达标率(%)",
                    type: 'bar'
                }]
            };
            setTimeout(() => {
                //echart初始化
                this.efficiencyChart = echarts.init(document.getElementById('efficiencyBar'));
                this.efficiencyChart.setOption(chartOption);
                this.efficiencyChart.setOption({ title: { text: '效率未达标线别 - TOP3' } });
                this.qualityChart = echarts.init(document.getElementById('qualityBar'));
                this.qualityChart.setOption(chartOption);
                this.qualityChart.setOption({ title: { text: '品质未达标线别 - TOP3' } });
            }, 0);
        },
        methods: {
            getdata: function () {
                this.loading = true;
                axios.post("/SMT/DisplayICContenInfo", {
                    time: this.postTime,
                }).then(res => {
                    console.log(res.data);
                    //表格数据
                    this.dataList = res.data;
                    //图表数据
                    this.efficiencyChart.setOption({
                        series: [{ data: res.data.efficiency.value }],
                        xAxis: { data: res.data.efficiency.line }
                    });
                    this.qualityChart.setOption({
                        series: [{ data: res.data.quality.value }],
                        xAxis: { data: res.data.quality.line }
                    });
                    this.loading = false;
                }).catch(err => {
                    console.warn(err);
                    this.loading = false;
                });
            },
            allScreen() {

            }
        },
    });
</script>