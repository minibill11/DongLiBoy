/*基础样式*/
*, body {
    margin: 0;
}

[v-cloak] {
    display: none;
}


/* ----------------------------------- */
/* 定义变量 */
@red: #F56C6C;
@blue: #409EFF;
@green: #67C23A;
@bg-color-top: #293038;
@bg-color-left: #2f4056;
@bg-color-bottom: #eff2f7;
/* 定义方法 */
.clearA(@color: #638aca) {
    a, a:link, a:visited, a:hover, a:active {
        text-decoration: none;
        color: @color;
    }
}

.clearA();
/* ----------------------------------- */

/* toptitle */
.topTitle {
    display: inline-flex;
    justify-content: space-between;
    background: @bg-color-top;
    height: 50px !important;

    .titleimg {
        display: inline-flex;
        justify-content: space-between;
        align-items: center;

        .hoverMenu {
            font-size: 30px;
            color: #fff;
            cursor: pointer;
        }

        .logo, a {
            margin-left: 5px;
            height: 30px;
            cursor: pointer;
        }
    }

    .topTitleComponent {
        display: inline-flex;
        align-items: center;

        .el-dropdown {
            color: #c1c1c1;
            margin: 0 10px;
            cursor: pointer;

            @media (max-width:992px) {
                margin: 0;
                padding: 0 10px;
            }

            .el-titleText {
                margin-left: 6px;
                margin-right: 12px;

                .badgeNum {
                    width: 15px;
                    height: 15px;
                    left: 1px;
                    bottom: 2px;

                    .el-badge__content {
                        font-size: 11px;
                        height: 15px;
                        line-height: 15px;
                        padding: 0 5px;
                        transition: All 0.4s ease-in-out;

                        &:hover {
                            transform: scale(1.2);
                        }
                    }
                }
            }

            .mobileIcon {
                margin: 0;
                width: auto;
            }
        }
    }
}

/* leftmenu */
.leftMenu {
    background: @bg-color-left;
    /*width: auto !important;*/
    max-width: 200px;

    .leftMenuComponent {
        height: e("calc(100vh - 50px)");
        overflow-x: hidden;
        overflow-y: auto;

        .el-menu {
            border-right: none;

            .el-menu-item, .menuItemComponent .el-submenu__title {
                padding: 0;
                height: 35px;
                line-height: 35px;
            }
        }
    }
}

.mobileLeftMenu {
    @media (max-width: 992px) {
        width: 100% !important;
        max-width: none;
    }
}
/* rightmain */
.rightMain {
    height: e("calc(100vh - 90px)");
    padding: 0;

    .rightMainTitle {
        z-index: 1;
        width: 100%;
        height: 30px;
        box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);

        .el-page-header {
            height: 30px;
            line-height: 30px;
            color: #888;

            .el-page-header__left::after {
                right: -10px;
            }

            .el-page-header__left {
                margin-right: 20px;
            }

            .el-icon-back {
                font-size: 14px;
                margin: 2px 2px 0px 7px;
                height: 30px;
                line-height: 30px;
            }

            .el-page-header__title {
                font-size: 12px;
            }

            .el-breadcrumb {
                height: 30px;
                line-height: 28px;
            }
        }
    }

    .rightMainContent {
        height: e("calc(100vh - 120px)");
        overflow: auto;
        padding-top: 5px;
    }
}

.mobileRightMain {
    @media (max-width: 992px) {
        display: none;
    }
}

/* bottominfo */
.bottomFooter {
    background: @bg-color-bottom;
    height: 40px !important;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    color: #8f9fb9;
}
/* end */
