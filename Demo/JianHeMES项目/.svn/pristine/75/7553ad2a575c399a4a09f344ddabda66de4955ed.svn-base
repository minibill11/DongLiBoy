.rightMain {
    .topiframe {
        height: 150px;

        @media (max-width:992px) {
            height: 100px;
        }

        @media (max-width:552px) {
            height: 65px;
        }

        .aboBanImg {
            position: fixed;
            z-index: -999;
            width: calc(~"100% - 320px");
            margin: 0 60px;
            bottom: 80px;

            @media (max-width:992px) {
                display: none;
            }
        }

        .textLogo {

            img {
                width: 500px;
                position: fixed;
                left: 26%;
                top: 150px;

                @media (max-width:992px) {
                    display: block;
                    position: relative;
                    margin: 0 auto;
                    width: 80%;
                    top: 20px;
                    left: 0;
                }
            }
        }
    }

    .bottomiframe {
        @media (min-width:992px) {
            max-height: e("calc(100vh - 275px)");
            overflow: auto;
        }

        .indexContent {
            /*height: e("calc(100vh - 230px )");*/
            background-color: #FFF;

            @media (max-width:992px) {
                margin: 0;
                width: 100%;
            }

            .leftText {
                padding: 15px 30px;

                @media (max-width:992px) {
                    width: 100%;
                }

                .text {
                    /*height: e("calc(100vh - 350px )");*/
                    p {
                        font-size: 13px;
                        line-height: 23px;
                        margin-bottom: 20px;
                        color: #5b5b5b;
                    }

                    .el-collapse {
                        border: 0;

                        .el-collapse-item__header {
                            height: 30px;
                            line-height: 30px;
                            border-bottom: 0;

                            .el-collapse-item__arrow {
                                margin: 3px 5px 0;
                            }
                        }
                    }
                }
            }

            .rightImg {
                height: 100%;

                img {
                    width: 15%;
                    position: absolute;
                    bottom: 50px;

                    @media (max-width:992px) {
                        display: none;
                    }
                }
            }
        }
    }
}
