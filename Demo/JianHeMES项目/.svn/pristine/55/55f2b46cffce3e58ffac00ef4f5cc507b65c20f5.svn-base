.el-header {
    height: auto !important;
    padding: 0 20px;
}

[v-cloak] {
    display: none;
}

.el-drawer__body {
    display: flex;
    align-items: flex-start;
    padding-top: 3%;
}

.el-table--enable-row-hover .el-table__body tr:hover > td {
    background-color: transparent !important;
}

.body-color, .el-table tr, .el-table th, #el-drawer__title, .el-drawer__body {
    background-color: #2651f9;
}

.el-drawer__header {
    margin-bottom: 0;
    padding: 0;
}

.titleDiv-left, .titleDiv-center, .titleDiv-right {
    height: 200px;
}

    .titleDiv-left > div, .titleDiv-center > div, .titleDiv-right > div {
        height: 200px;
        border: 1px solid #000000;
    }

    .titleDiv-left > div {
        border-top-left-radius: 30px;
        border-bottom-right-radius: 30px;
    }

    .titleDiv-left > div, .titleDiv-right > div {
        background-color: yellow;
    }

    .titleDiv-center > div {
        background-color: #e6f4fa;
    }

.el-table {
    font-size: 1.3em;
}

.el-main {
    padding: 0px 20px;
}

.el-table thead, .el-table, h2 {
    color: white;
}

.achieveStatus {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
    color: #0087ff;
}

    .achieveStatus > div:first-child {
        margin: 15px 0;
    }

    .achieveStatus > div {
        font-size: 1.8em;
        line-height: 40px;
    }

.achieveStatusDiv {
    display: flex;
    justify-content: space-between;
    width: 60%;
}

.el-drawer {
    overflow: auto;
}

h2 {
    margin: 0 0 20px;
    font-size: 35px;
}
