@{
    ViewBag.Title = "登录";
    //Layout = "~/Views/Shared/_Layout2.cshtml";
}

<script src="~/Scripts/axios.min.js"></script>
@Scripts.Render("~/Scripts/jquery")
@Scripts.Render("~/Scripts/vue")
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
<style>

    body {
        margin: 0;
        padding: 0;
        font-family: "Microsoft Yahei";
    }

    *:focus {
        outline: none;
        background-color: transparent;
    }

    .bigbox {
        position: relative;
        height: 100%;
        background: url(/Images/login_background_PC.jpg) no-repeat center center;
        background-size: cover;
    }

        .bigbox .innerbox {
            position: relative;
            left: 50%;
            top: 50%;
            margin-top: -230px;
            margin-left: -360px;
            float: left;
            width: 720px;
            height: 460px;
            background: center center no-repeat url(/Images/innerboxbg.jpg);
            background-size: 720px auto;
        }

    .loginbox {
        position: absolute;
        right: 0;
        top: 0;
        width: 260px;
        height: 380px;
        background-color: #fff;
        border-radius: 10px;
        padding: 40px 50px;
    }

        .loginbox .logo {
            float: right;
            width: 100%;
            height: 80px;
            background: left top no-repeat url(/Images/login-logo.png);
            background-size: auto 40px;
        }

        .loginbox .welcome {
            color: #364862;
            text-align: left;
            font-size: 24px;
            font-family: 'Microsoft YaHei';
        }

        .loginbox .usernumbox {
            width: 100%;
            height: 70px;
            border-bottom: 1px solid #364862;
            background: left center no-repeat url(/Images/login-icon-user.png);
            background-position: 0 40px;
        }

            .loginbox .usernumbox .usernum {
                position: relative;
                top: 3px;
                padding-left: 30px;
                margin-top: 25px;
                padding-top: 10px;
                width: 100%;
                border: 0px;
                line-height: 30px;
                text-align: left;
                color: #90a1b8;
                font-size: 16px;
                background-color: transparent;
                background: bottom;
                box-sizing: border-box;
                font-family: "Microsoft Yahei";
            }

        .loginbox .pwdbox {
            width: 100%;
            height: 70px;
            border-bottom: 1px solid #364862;
            background: left center no-repeat url(/Images/login-icon-password.png);
            background-position: 0 40px;
        }

            .loginbox .pwdbox .pwd {
                position: relative;
                top: 4px;
                padding-left: 30px;
                margin-top: 30px;
                width: 100%;
                border: 0;
                line-height: 34px;
                text-align: left;
                color: #90a1b8;
                font-size: 16px;
                background-color: transparent;
                background: bottom;
                box-sizing: border-box;
                font-family: "Microsoft Yahei";
            }

        .loginbox .loginbtn {
            margin-top: 25px;
            width: 100%;
            height: 50px;
            line-height: 50px;
            border: 0;
            color: #fff;
            border-radius: 25px;
            border-bottom-color: #2976f8;
            cursor: pointer;
            font-family: "Microsoft Yahei";
            background-image: linear-gradient(to right, #2976f8, #1890ff);
            font-size: 16px;
            line-height: 40px;
        }

            .loginbox .loginbtn:hover {
                /*box-shadow: 0px 4px 4px 0px rgba(0,0,0,.3);*/
                background-image: linear-gradient(to right, #2976f8, #2976f8);
            }

        .loginbox .autologinforgetpwd {
            margin-top: 10px;
            font-size: 12px;
            color: #364862;
        }

            .loginbox .autologinforgetpwd .autologin {
                margin-top: 5px;
                /*border: 1px solid #364862;
                border-radius:2px;*/
            }

            .loginbox .autologinforgetpwd .autologintext {
                position: relative;
                top: -3px;
                font-size: 12px;
                color: #364862;
                line-height: 12px;
                font-family: 'Microsoft YaHei';
            }

            .loginbox .autologinforgetpwd .forgetpwd {
                margin-top: 5px;
                text-decoration: none;
                float: right;
                color: #364862;
                font-family: 'Microsoft YaHei';
            }

                .loginbox .autologinforgetpwd .forgetpwd:hover {
                    cursor: pointer;
                }

        .loginbox .download_exp {
            margin-top: 20px;
            font-size: 12px;
            color: #364862;
            text-align: center;
        }

            .loginbox .download_exp > a {
                text-decoration: none;
                font-size: 12px;
                color: #364862;
                cursor: pointer;
            }

    @@media only screen and (max-width: 768px) {
        .bigbox .innerbox {
            position: fixed;
            left: 0;
            top: 0;
            margin-top: 0;
            margin-left: 0;
            float: left;
            width: 100%;
            height: 100%;
            background: none;
        }

        .loginbox {
            position: absolute;
            right: 50%;
            top: 50%;
            margin-right: -180px;
            margin-top: -230px;
            width: 260px;
            height: 380px;
            background-color: #fff;
            border-radius: 10px;
            padding: 40px 50px;
        }
    }

    @@media only screen and (max-width: 480px) {
        .bigbox .innerbox {
            position: relative;
            left: 0;
            top: 0;
            margin-top: 0;
            margin-left: 0;
            float: left;
            width: 100%;
            height: 100%;
            background: none;
        }

        .loginbox {
            position: absolute;
            right: 0;
            top: 0;
            margin-right: 0;
            margin-top: 0;
            width: 100%;
            height: 100%;
            border-radius: 0;
            padding: 40px 30px 10px 30px;
            box-sizing: border-box;
        }

            .loginbox .logo {
                background: center top no-repeat url(/Images/login-logo.png);
            }

            .loginbox .welcome {
                text-align: center;
            }
    }
</style>

<div id="app">
    <div id="bigbox" class="bigbox">
        <div id="innerbox" class="innerbox">
            <div id="loginbox" class="loginbox">
                <div class="logo"></div>
                <div class="welcome">欢迎登录</div>
                <div class="usernumbox">
                    <input id="UserNum" autofocus="autofocus" class="usernum" v-model="usernum" placeholder="请输入员工编号" />
                </div>
                <div class="pwdbox">
                    <input id="PassWord" type="password" class="pwd" v-model="pwd" placeholder="请输入密码" />
                </div>

                <div class="autologinforgetpwd">
                    <input type="checkbox" class="autologin" /><span class="autologintext">自动登录</span>
                    <span class="forgetpwd" id="forgetpwd" click="showtips">忘记密码？</span>
                </div>

                <button id="loginbtn" class="loginbtn" v-on:click="login">登 录</button>
                <div class="download_exp">
                    FireFox：
                    <a href="~/MES_Data/ChromeCore_1277_3.0.1.6.exe"> Chrome</a>，
                    <a href="~/MES_Data/Firefox Setup x64.exe">64位</a>，
                    <a href="~/MES_Data/Firefox Setup x86.exe">32位</a>，
                    <a href="~/MES_Data/Firefox Setup XP.exe">XP版</a>

                </div>
            </div>
        </div>

    </div>


</div>


<script>
    $(function () {
        $("#UserNum").keypress(function (e) {
            if (e.which == 13) {// 判断所按是否回车键
                $("#loginbtn").focus(); // 设置焦点
                return false;// 取消默认的提交行为
            }
        });
    });
    $(function () {
        $("#PassWord").keypress(function (e) {
            if (e.which == 13) {// 判断所按是否回车键
                $("#PassWord").focus(); // 设置焦点
                return false;// 取消默认的提交行为
            }
        });
    });


    $(function showtips() {
        $("#forgetpwd").click(
            function (e) {
                alert("请联系技术部智造组！");
            });
    });

    var app = new Vue({
        el: '#app',
        data: {
            user: {},
            clickAddress: '',
            usernum: '',
            pwd: '',
            col: '',
            act: '',
            tips: '',
        },
        mounted: function () {
            $('#app').on('show.bs.modal', function () {
                if (this.clickAddress == "") {
                    this.clickAddress = window.location.pathname == "/Users/Login2" ? "" : window.location.pathname;
                };
            });
            localStorage.removeItem('rigths');
        },
        methods: {
            showtips() {
                //this.$res.dialog.showtips(this.tips);
                alert("请联系技术部智造组！");
            },
            login() {
                axios.post("/Users/Login2", {
                    user: {
                        UserNum: this.usernum,
                        PassWord: this.pwd,
                    },
                    col: this.col == '' ? null : this.col,
                    act: this.act == '' ? null : this.act,
                }).then(res => {
                    window.location.href = res.request.responseURL
                })
            },
        },
    })
</script>
