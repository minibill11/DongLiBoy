@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        var app = new Vue({
            el: '#app',
            data: {
                ordernum: "",
                numcode: "",
                trueOrderNum:"",
            },
            watch: {
                numcode: function (val) {
                    if (val==val.replace(/[^\d]/g,'')) {
                        this.ordernum = $("select:lt(3) option:checked").text() + val + $("select:eq(3) option:checked").text();
                        this.numcode = val;
                    } else {
                        this.numcode = "";
                    }
                },
                ordernum: function (val) {
                    if (val.length == 9) {
                        this.trueOrderNum = val;
                    } else {
                        this.trueOrderNum = "";
                    }
                }
            }
        })
        $("select").change(function () {
            app.ordernum = $("select:lt(3) option:checked").text() + app.numcode + $("select:eq(3) option:checked").text()
    });
    </script>
}