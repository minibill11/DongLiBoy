<template>
    <div class="sa-header">
        <div class="sa-title">{{active}}</div>
        <div class="sa-header-btn">
            <el-button v-for="(item,index) in header_list" :key="index" size="small" type="primary" :plain="active==item?false:true" @click="skip(item)" style="border-bottom: none;font-size:14px;">{{item}}</el-button>
        </div>
        <hr class="style-one" />
    </div>
</template>

<script>
    export default {
        name: '',
        data() {
            return {}
        },
        props: ['active', 'header_list'], //字符串数组写法
        methods: {
            skip(val) {
                if (val == '库存金额信息') {
                    this.$router.push({
                        path: '/warehouse/stock_index',
                    })
                }
                if (val == '月度库存金额') {
                    this.$router.push({
                        path: '/warehouse/stock_query',
                    })
                }
                if (val == '查询ERP库存月度结存金额') {
                    this.$router.push({
                        path: '/warehouse/stock_query',
                    })
                }
            }
        },
    }
</script>

