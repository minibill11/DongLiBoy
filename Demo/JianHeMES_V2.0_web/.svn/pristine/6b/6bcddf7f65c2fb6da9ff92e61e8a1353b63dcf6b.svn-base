@import '~view-design/src/styles/index.less';
@import url("./color.less");

[v-cloak] {
  display:none !important;
}
.main .content-wrapper {
  padding: 10px 18px 70px 18px;
}
.ivu-layout{
  background-color: #fff;
}
//按钮
.component-btn{
  display: inline;
  margin: 0 10px;
}
.el-button.is-disabled,
.el-button.is-disabled:focus,
.el-button.is-disabled:hover {
  background-color: #ccd3de;
  border:1px solid #ccd3de;
  color: #fff;
}
// 顶部
.ivu-layout-header {
  background-color: #293038;
  height: 40px;
  line-height: 40px;
  padding: 0 20px;
}

// 侧边栏
.ivu-layout-sider-children {
  background-color: #2f3f56;
}

.ivu-menu-dark.ivu-menu-vertical .ivu-menu-submenu .ivu-menu-item-active,
.ivu-menu-dark.ivu-menu-vertical .ivu-menu-submenu .ivu-menu-item-active:hover {
  background: none !important;
  color: @primary-color;
}

//顶部栏
.ivu-breadcrumb>span:last-child {
  color: @primary-color;
  font-weight: normal;
}
.ivu-breadcrumb a{
  color: #fff;
}
.ivu-breadcrumb {
  color: #fff;
}
.el-popper[x-placement^=bottom]{
margin: 0;
}
//左侧收缩兰
.ivu-menu-vertical .ivu-menu-item, .ivu-menu-vertical .ivu-menu-submenu-title{
  padding:8px;
}
.ivu-layout-sider {
  box-shadow: 0 4px 25px 0 rgba(0, 0, 0, .2);
}

.ivu-menu-light.ivu-menu-vertical .ivu-menu-item:not(.ivu-menu-submenu):hover {
  margin: 0 20px;
}

.ivu-menu-light.ivu-menu-vertical .ivu-menu-item-active:not(.ivu-menu-submenu)::after {
  display: none;

}
.ivu-menu-dark.ivu-menu-vertical .ivu-menu-opened .ivu-menu-submenu-has-parent-submenu .ivu-menu-submenu-title,
.ivu-menu-vertical .ivu-menu-submenu .ivu-menu-item{
  margin-left: -10px;
}

.ivu-progress-show-info .ivu-progress-outer {
  padding: 8px 55px 8px 0;
}

//滚动条
div::-webkit-scrollbar {
  height: 5px;
}

div::-webkit-scrollbar-track {
  background: rgb(239, 239, 239);
  border-radius: 2px;
}

div::-webkit-scrollbar-thumb {
  background: #cdcdcd;
  border-radius: 10px;
}

div::-webkit-scrollbar-thumb:hover {
  background: #cdcdcd;
}

.ivu-drawer-body {
  padding: 0;
}
//table
.el-table th{
  padding: 4px 0;
}
.el-table--striped .el-table__body tr.el-table__row--striped td {
  background: #eff2f7;
}