@import url("../../../src/index.less");

.main .content-wrapper {
  padding: 10px 18px;
}

// 顶部
.ivu-layout-header {
  background-color: #293038;
  height: 50px;
  line-height: 50px;
}

// 侧边栏
.ivu-layout-sider-children {
  background-color: #2f3f56;
}

.ivu-menu-dark.ivu-menu-vertical .ivu-menu-submenu .ivu-menu-item-active,
.ivu-menu-dark.ivu-menu-vertical .ivu-menu-submenu .ivu-menu-item-active:hover {
  background: none !important;
  color: #409eff;
}

//table 
.ivu-table-cell {
  padding-left: 5px;
  padding-right: 5px;
}

.ivu-table-header thead tr th,
.ivu-table-fixed-header thead tr th {
  padding: 4px 0;
}

th .ivu-table-cell {
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ivu-table-small td {
  height: 30px;
}

.vxe-table.row--highlight .vxe-body--row:hover {
  background-color: @table-td-hover-bg;
}

.ivu-breadcrumb>span:last-child {
  color: @primary-color;
  font-weight: normal;
}

.ivu-layout-sider {
  box-shadow: 0 4px 25px 0 rgba(0, 0, 0, .2);
}

.ivu-menu-vertical .ivu-menu-submenu .ivu-menu-item {
  padding: 10px;
}

.ivu-menu-light.ivu-menu-vertical .ivu-menu-item-active:not(.ivu-menu-submenu) {
  box-shadow: 0 0 10px rgb(115, 103, 240, .2);
  margin: 0 20px;
  border-radius: 5px;
  color: #fff;
  background: linear-gradient(270deg, #9B92F4 0%, #7367F0 100%);
}

.ivu-menu-light.ivu-menu-vertical .ivu-menu-item:not(.ivu-menu-submenu):hover {
  margin: 0 20px;
}

// .ivu-tag-dot {
//     box-shadow:  0 4px 25px 0 rgba(0, 0, 0, .1);
// }
.ivu-menu-light.ivu-menu-vertical .ivu-menu-item-active:not(.ivu-menu-submenu)::after {
  display: none;

}

Button,
.ivu-switch,
.ivu-switch-checked {
  box-shadow: 0 4px 25px 0 rgba(0, 0, 0, .2);
}

.ivu-progress-bg {
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, .1);
}

.ivu-progress-show-info .ivu-progress-outer {
  padding: 8px 55px 8px 0;
}

.bar-select {
  box-shadow: 0 8px 25px -8px #aaa;
}

.bar-margin {
  margin-right: 5px;
}

.bar-bottom {
  margin-bottom: 10px;
}

.btn0,
.btn0:active,
.btn0:focus {
  border-radius: 6px;
  cursor: pointer;
  box-shadow: 0 8px 25px -8px #aaa;
}

.bar-btn0 {
  background-color: #fff;
  border: #ebebeb 1px solid;
}

.bar-btn0:hover {
  color: @primary-color;
  border: @primary-color 1px solid;
}

.btn,
.btn:active,
.btn:focus {
  border: none;
  outline: none;
  border-radius: 6px;
  cursor: pointer;
  color: #fff;
  box-shadow: 0 8px 25px -8px #aaa;
}

.bar-btn1 {
  background: linear-gradient(30deg, rgb(150, 140, 250) 0%, rgb(127, 9, 245) 100%);
}

.bar-btn1:hover {
  color: #fff;
  background: linear-gradient(30deg, rgb(115, 103, 240) 0%, rgb(206, 159, 252) 100%);
}

.bar-btn2 {
  background: linear-gradient(30deg, #F59FBE 0%, #EE578D 100%);
}

.bar-btn2:hover {
  color: #fff;
  background: linear-gradient(30deg, #EE578D 0%, #F59FBE 100%);
}

.bar-btn3 {
  background: linear-gradient(30deg, #4BC1F6 0%, #2db7f5 100%);
}

.bar-btn3:hover {
  color: #fff;
  background: linear-gradient(30deg, #2db7f5 0%, #4BC1F6 100%);
}

.bar-btn3 {
  background: linear-gradient(30deg, #69CCF8 0%, #2db7f5 100%);
}

.bar-btn3:hover {
  color: #fff;
  background: linear-gradient(30deg, #2db7f5 0%, #69CCF8 100%);
}

.bar-btn6 {
  background: linear-gradient(30deg, rgb(41, 45, 252) 0%, rgb(149, 150, 255) 100%);
}

.bar-btn6:hover {
  color: #fff;
  background: linear-gradient(30deg, rgb(149, 150, 255) 0%, rgb(41, 45, 252) 100%);
}

.bar-btn4 {
  background: linear-gradient(30deg, #E5DF7B 0%, #DBD246 100%);
}

.bar-btn4:hover {
  color: #fff;
  background: linear-gradient(30deg, #DBD246 0%, #E5DF7B 100%);
}

.bar-btn5 {
  background: linear-gradient(30deg, #FEADA6 0%, #FD7064 100%);
}

.bar-btn5:hover {
  color: #fff;
  background: linear-gradient(30deg, #FD7064 0%, #FEADA6 100%);
}

div::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

div::-webkit-scrollbar-track {
  background: rgb(239, 239, 239);
  border-radius: 2px;
}

div::-webkit-scrollbar-thumb {
  background: #bfbfbf;
  border-radius: 10px;
}

div::-webkit-scrollbar-thumb:hover {
  background: #7367F0;
}

.ivu-drawer-body {
  padding: 0;
}
