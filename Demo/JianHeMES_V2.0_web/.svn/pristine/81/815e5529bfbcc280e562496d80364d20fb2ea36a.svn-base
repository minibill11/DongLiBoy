
#app {
    .el-main {
        padding: 10px 20px;
    }

    .el-table th .cell {
        font-weight: 700;
        color: #293038;
        height: 30px;
        line-height: 30px;
    }

    .table-top {

        .table-top-left {
            float: left;
        }

        .table-top-right {
            float: right;
        }
    }

    .title {
        font-family: '微软雅黑';
        font-weight: 400;
        font-style: normal;
        font-size: 22px;
    }

    .boxcolor {
        width: 14px;
        height: 14px;
        border: 1px solid rgba(201, 211, 221, 1);
        margin-right: 7px;
    }

    .table-bottom {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        margin: 10px 0;
        font-size: 14px;
    }

    .bggreen {
        background-color: rgba(213, 244, 229, 1);
    }

    .bgyellow {
        background-color: rgba(255, 245, 184, 1);
    }

    .bgred {
        background-color: rgba(255, 220, 221, 1);
    }

    .now-time {
        width: 122px;
        height: 18px;
        font-size: 12px;
        color: #555;
    }

    .board-table {
        .table-line-div {
            display: grid;
            place-items: center;
            width: 100%;
            height: 36px;
            min-width: 80px;

            &:not(:last-child) {
                height: 37px;
                border-bottom: 1px solid #c9d3dd;
            }
        }

        .table-other-div {
            display: flex;
            flex-flow: column wrap;

            span {
                width: 100%;
                height: 18px;
                line-height: 18px;
                min-width: 80px;
            }

            &:not(:last-child) {
                border-bottom: 1px solid #c9d3dd;
            }
        }
    }

    .board-table-btn {
        position: relative;
        height: 36px;
        line-height: 36px;
        min-width: 80px;
        cursor: pointer;

        .btn-show {
            position: absolute;
            width: 100%;
            padding: 5px 3px;
            height: 36px;
            left: 0;
        }

        .left-btn, .right-btn {
            width: 50%;
        }

        .right-btn {
            left: 50%;
            margin-left: 0 !important;
        }
    }

    .el-dialog {
        margin: 10px auto 0 !important;

        .el-dialog__header, .el-dialog__footer {
            padding: 10px 20px;
        }

        .el-dialog__headerbtn {
            top: 10px;
        }

        .el-dialog__body {
            padding: 0;
        }
    }
}
