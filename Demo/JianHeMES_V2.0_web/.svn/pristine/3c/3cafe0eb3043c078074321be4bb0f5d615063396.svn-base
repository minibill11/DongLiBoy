.main-box {
    padding: 14px;
}
.eq-header {
    width:100%;
    text-align:center;
}
.eq-title {
    font-weight: 400;
    font-size: 24px;
}
.eq-header-btn {
    padding: 15px 0 0 0;

    .el-button--normal {
        border: 1px solid rgba(179, 216, 255, 1);
        background-color: rgba(236, 245, 255, 1);
    }

    .el-button--normal.is-plain:focus, .el-button--normal.is-plain:hover {
        background: rgba(236, 245, 255, 1);
        border-color: rgba(179, 216, 255, 1);
        color: rgb(45, 140, 240);
    }
}
.el-table{
    margin-top:10px;
}
hr.style-one { /*内嵌水平线*/
    width: 100%;
    margin: 0 auto;
    border: 0;
    height: 0;
    border-top: 1px solid rgb(179, 216, 255);
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}
/*查询行*/
.equipment-index-inputcontainer {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    flex-wrap: wrap;
}

.equipment-index-inputcontainer-item {
    margin-right: 10px;
    display: flex;
    align-items: center;
}
/*按钮*/
.btn {
    font-size: 12px;
    padding: 4px;
    border-radius: 5px;
}

.btn-green {
    background: #22c49e;
    color: #fff;
}

.btn-yellow {
    background: #f7c73a;
    color: #fff;
}

.btn-red {
    background: #ff8590;
    color: #fff;
}

.btn-gray {
    background: #8ea0b8;
    color: #fff;
}

.btn-border {
    display: inline-block;
    border: 1px solid #293038;
    color: #293038;
    padding: 0 2px;
}

.btn-border-gray {
    display: inline-block;
    border: 1px solid #a2a9b0;
    color: #a2a9b0;
    padding: 0 2px;
}
//弹出框
.el-dialog__header {
    background: #e4ecf7;
    padding: 20px 20px 10px;
    border-bottom: 1px solid #c9d3dd;
}

.el-dialog__body {
    padding: 10px 20px;
}

.el-form-item {
    margin-bottom: 2px;
}
.el-dialog__footer {
    padding: 0 20px 20px 20px;
}
//提示
.tip-box {
    text-align: center;
}
.tip {
    font-size: 12px;
    background: #FEF0F0;
    color: #FB6D75;
    padding: 4px 10px;
    border-radius: 10px;
    margin-bottom:7px;
}
