*:focus {
  outline: none;
  background-color: transparent;
}
.bigbox {
    position: relative;
    height: 100vh;
    background: url("../../assets/images/login/login-background-PC.jpg") no-repeat
      center center;
    background-size: cover;
  }
  
  .bigbox .innerbox {
    position: relative;
    left: 50%;
    top: 50%;
    margin-top: -230px;
    margin-left: -360px;
    float: left;
    width: 720px;
    height: 460px;
    background: center center no-repeat
      url("../../assets/images/login/innerboxbg.jpg");
    background-size: 720px auto;
  }
  
  .loginbox {
    box-sizing: content-box;
    position: absolute;
    right: 0;
    top: 0;
    width: 260px;
    height: 380px;
    background-color: #fff;
    border-radius: 10px;
    padding: 40px 50px;
  }
  
  .loginbox .logo {
    float: right;
    width: 100%;
    height: 80px;
    background: left top no-repeat url("../../assets/images/login/login-logo.png");
    background-size: auto 40px;
  }
  
  .loginbox .welcome {
    color: #364862;
    text-align: left;
    font-size: 24px;
    font-family: "Microsoft YaHei";
  }
  
  .loginbox .usernumbox {
    width: 100%;
    height: 70px;
    border-bottom: 1px solid #364862;
    background: left center no-repeat
      url("../../assets/images/login/login-icon-user.png");
    background-position: 0 40px;
  }
  
  .loginbox .usernumbox .usernum {
    position: relative;
    top: 3px;
    padding-left: 30px;
    margin-top: 25px;
    padding-top: 10px;
    width: 100%;
    border: 0px;
    line-height: 30px;
    text-align: left;
    color: #90a1b8;
    font-size: 16px;
    background-color: transparent;
    background: bottom;
    box-sizing: border-box;
    font-family: "Microsoft Yahei";
  }
  
  .loginbox .pwdbox {
    width: 100%;
    height: 70px;
    border-bottom: 1px solid #364862;
    background: left center no-repeat
      url("../../assets/images/login/login-icon-password.png");
    background-position: 0 40px;
  }
  
  .loginbox .pwdbox .pwd {
    position: relative;
    top: 4px;
    padding-left: 30px;
    margin-top: 30px;
    width: 100%;
    border: 0;
    line-height: 34px;
    text-align: left;
    color: #90a1b8;
    font-size: 16px;
    background-color: transparent;
    background: bottom;
    box-sizing: border-box;
    font-family: "Microsoft Yahei";
  }
  
  .loginbox .loginbtn {
    margin-top: 25px;
    width: 100%;
    height: 50px;
    line-height: 50px;
    border: 0;
    color: #fff;
    border-radius: 25px;
    border-bottom-color: #2976f8;
    cursor: pointer;
    font-family: "Microsoft Yahei";
    background-image: linear-gradient(to right, #2976f8, #1890ff);
    font-size: 16px;
    line-height: 40px;
  }
  
  .loginbox .loginbtn:hover {
    background-image: linear-gradient(to right, #2976f8, #2976f8);
  }
  
  .loginbox .autologinforgetpwd {
    margin-top: 10px;
    font-size: 12px;
    color: #364862;
  }
  
  .loginbox .autologinforgetpwd .autologin {
    margin-top: 5px;
  }
  
  .loginbox .autologinforgetpwd .autologintext {
    position: relative;
    top: -3px;
    font-size: 12px;
    color: #364862;
    line-height: 12px;
    font-family: "Microsoft YaHei";
  }
  
  .loginbox .autologinforgetpwd .forgetpwd {
    margin-top: 5px;
    text-decoration: none;
    float: right;
    color: #364862;
    font-family: "Microsoft YaHei";
  }
  
  .loginbox .autologinforgetpwd .forgetpwd:hover {
    cursor: pointer;
  }
  
  .loginbox .download_exp {
    margin-top: 12px;
    font-size: 12px;
    color: #364862;
    text-align: center;
  }
  
  .loginbox .download_exp > a {
    text-decoration: none;
    font-size: 12px;
    color: #364862;
    cursor: pointer;
  }
  
  @media only screen and (max-width: 768px) {
    .bigbox .innerbox {
      position: fixed;
      left: 0;
      top: 0;
      margin-top: 0;
      margin-left: 0;
      float: left;
      width: 100%;
      height: 100%;
      background: none;
    }
  
    .loginbox {
      position: absolute;
      right: 50%;
      top: 50%;
      margin-right: -180px;
      margin-top: -230px;
      width: 260px;
      height: 380px;
      background-color: #fff;
      border-radius: 10px;
      padding: 40px 50px;
    }
  }
  
  @media only screen and (max-width: 480px) {
    .bigbox .innerbox {
      position: relative;
      left: 0;
      top: 0;
      margin-top: 0;
      margin-left: 0;
      float: left;
      width: 100%;
      height: 100%;
      background: none;
    }
  
    .loginbox {
      position: absolute;
      right: 0;
      top: 0;
      margin-right: 0;
      margin-top: 0;
      width: 100%;
      height: 100%;
      border-radius: 0;
      padding: 40px 30px 10px 30px;
      box-sizing: border-box;
    }
  
    .loginbox .logo {
      background: center top no-repeat url("../../assets/images/login/login-logo.png");
    }
  
    .loginbox .welcome {
      text-align: center;
    }
  }