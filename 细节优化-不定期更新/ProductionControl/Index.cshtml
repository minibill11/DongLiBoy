<script>
    var isHoverNum = "true";
    var app = new Vue({
        el: "#app",
        data: {
            marqueeList: [],
            //imgSrc: "",
        },
        computed: {
            sortmarqueeList() {
                var initialList = this.marqueeList;
                var firstSort = sortByActualProductionTime(initialList, "ActualProductionTime");
                var secondSort = sortByActualFinishTime(firstSort, "ActualFinishTime");
                var thirdSort = sortByPlanInputTime(secondSort, "PlanInputTime");
                return secondSort;
            }
        },
        created: function () {
            setInterval(function () {
                $("#nowtime").text(new Date().Format("yyyy-MM-dd hh:mm:ss"));
            }, 1000);
        },
        methods: {
            Detail: function (val, station) {
                this.$options.methods.postForm("/ProductionControl/" + station, val);
            },
            orderDetail: function (val, station) {
                this.$options.methods.postForm("/OrderMgms/Details/" + station, val);
            },
            postForm: function (url, params) {
                var newForm = $("<form action=" + url + " target='_blank' method='post' style='display:none' ><input name='OrderNum' value=" + params + " ></form>");
                $("#setForm").append(newForm);
                newForm.submit();
                newForm.remove();
            },
            clickBtn: function (event) {
                $(event.target).children(".showDiv").css({ "visibility": "visible", "opacity": "1" })
            },
            imgModal_AOD: function (OrderNumVal) {
                $(".imgRotateDiv").remove();
                $("#pdfIframe").hide();
                $.ajax({
                    url: "/OrderMgms/GetImg",
                    type: "post",
                    data: {
                        ordernum: OrderNumVal,
                    },
                    success: function (returnVal) {
                        if (returnVal == "此特采单订单图片尚未上传！") {
                            alert(returnVal)
                        } else {
                            var json = JSON.parse(returnVal);
                            for (var img in json) {
                                $("#contentModal").append('<div class="imgRotateDiv" >' +
                                    '<img class="imgModalc artZoom" src="/AOD_Files/' + OrderNumVal + '/' + json[img] + '?' + Math.random() + '" style="width:100%;" alt="该特采订单照片尚未上传！" />' +
                                     '</div>');
                            };
                            $('.artZoom').artZoom({
                                path: '/AOD_Files/',	// 设置artZoom图片文件夹路径
                                preload: true,		// 设置是否提前缓存视野内的大图片
                                blur: true,			// 设置加载大图是否有模糊变清晰的效果

                                // 语言设置
                                left: '左旋转',		// 左旋转按钮文字
                                right: '右旋转',		// 右旋转按钮文字
                                source: '看原图'		// 查看原图按钮文字
                            });
                            $("#titlelabel").text("特采订单");
                            $("#showModal").click();
                        };
                    },
                    error: function (err) {
                        alert("特采订单图片尝未上传！", err);
                    }
                });
                //this.imgSrc = "/OrderMgms/GetImg?ordernum=" + ordernum;
            },
            imgModal_Abnormal: function (OrderNumVal) {
                $(".imgRotateDiv").remove();
                $("#pdfIframe").hide();
                $.ajax({
                    url: "/OrderMgms/GetAbnormalOrderImg",
                    type: "post",
                    data: {
                        ordernum: OrderNumVal,
                    },
                    success: function (returnVal) {
                        if (returnVal == "此异常单订单图片尚未上传！") {
                            alert(returnVal)
                        } else {
                            var json = JSON.parse(returnVal);
                            for (var img in json) {
                                $("#contentModal").append('<div class="imgRotateDiv" >' +
                                    '<img class="imgModalc artZoom" src="/AbnormalOrder_Files/' + OrderNumVal + '/' + json[img] + '?' + Math.random() + '" style="width:100%;" alt="该异常订单照片尚未上传！" />' +
                                    '</div>');
                            };
                            $('.artZoom').artZoom({
                                path: '/AbnormalOrder_Files/',	// 设置artZoom图片文件夹路径
                                preload: true,		// 设置是否提前缓存视野内的大图片
                                blur: true,			// 设置加载大图是否有模糊变清晰的效果

                                // 语言设置
                                left: '左旋转',		// 左旋转按钮文字
                                right: '右旋转',		// 右旋转按钮文字
                                source: '看原图'		// 查看原图按钮文字
                            });
                            $("#titlelabel").text("异常订单");
                            $("#showModal").click();
                        };
                    },
                    error: function (err) {
                        alert("异常订单图片尝未上传！", err);
                    }
                });
                //this.imgSrc = "/OrderMgms/GetImg?ordernum=" + ordernum;
            },
            pdfModal_AOD: function (OrderNumVal) {
                $(".imgRotateDiv").remove();
                $("#pdfIframe").show();
                $.ajax({
                    url: "/OrderMgms/GetPDF",
                    type: "post",
                    cache: false,
                    data: {
                        ordernum: OrderNumVal,
                    },
                    success: function (address) {
                        if (address == "此特采单pdf版文件尚未上传，无pdf文件可下载！") {
                            alert(address)
                        } else {
                            $("#setPdf").append('<a id="temporary" href="../../Scripts/pdf.js/web/viewer.html?file=\\AOD_Files\\' + OrderNumVal + '\\' + OrderNumVal + '_AOD.pdf?' + Math.random() + '" target="pdfIframe" style="display:none"></a>');
