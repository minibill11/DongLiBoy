@model IEnumerable<JianHeMES.Models.Burn_in>

@{
    ViewBag.Title = "老化调试详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src="~/Scripts/jquery-1.11.3.js"></script>*@

<style>
    .barcodeFrame {
        width: 250px;
        height: 100px;
        border: 1px solid #000000;
        overflow: auto;
    }

    .abnormalFrame {
        width: 700px;
        height: 400px;
        border: 1px solid #000000;
        overflow: auto;
    }

    .titlerow div {
        font-size: 16px;
        font-weight: bold;
    }
</style>
<h2>@ViewBag.OrderNum 老化工序详细情况</h2>
@{
    var JsonObj = ViewBag.JsonObj;
}
<hr />

<div class="row titlerow">
    <div class="col-md-3">
        订单号：<a href="#" class="aOrderNum" myAttr="">@JsonObj.OrderNum</a>
    </div>
    <div class="col-md-2">
        平台类型：@ViewBag.PlatformType
    </div>
    <div class="col-md-3">
        出货日期：<span id="deliveryDate"></span>
    </div>
    <div class="col-md-2">
        模组数：@JsonObj.modelGroupQuantity
    </div>
    <div class="col-md-2">
        直通个数：@JsonObj.firstPassYieldCount
    </div>
</div>
<br />
<div class="row titlerow">
    <div class="col-md-3">
        总老化次数：<a href="#" class="aOrderNum" myAttr="">@JsonObj.Burn_in_PQC_Count</a>
    </div>
    <div class="col-md-2">
        已完成老化数：<a href="#" class="aOrderNum" myAttr="完成">@JsonObj.finished</a>
    </div>
    <div class="col-md-3">
        完成率：@JsonObj.finisthRate %
    </div>
    <div class="col-md-2">
        合格率：@JsonObj.passRate %
    </div>
    <div class="col-md-2">
        直通率：@JsonObj.firstPassYield_Rate %
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            正在进行老化条码清单：（@JsonObj.goingNum 个）
            <div class="barcodeFrame">
                <ul>
                    @foreach (var item in ViewBag.going_temp as List<JianHeMES.Models.Burn_in>)
                    {
                        <li>@Html.RouteLink(item.BarCodesNum, "Default", new { Controller = "Burn_in", Action = "Details", id = item.Id }, new { target = "_blank" })</li>
                    }
                </ul>
            </div>
        </div>
        <br />
        <div>
            未开始老化条码清单：（@JsonObj.unbeginRecordNum 个）
            <div class="barcodeFrame">
                <ul>
                    @foreach (var item in ViewBag.unbeginRecord_temp as List<string>)
                    {
                        <li>@item</li>
                    }
                </ul>
            </div>
        </div>
        <br />
        <div>
            已完成老化条码清单：（@JsonObj.passedNum 个）
            <div class="barcodeFrame">
                <ul>
                    @foreach (var item in ViewBag.passed_temp as List<JianHeMES.Models.Burn_in>)
                    {
                        <li>@Html.RouteLink(item.BarCodesNum, "Default", new { Controller = "Burn_in", Action = "Details", id = item.Id }, new { target = "_blank" })</li>
                    }
                </ul>
            </div>
        </div>
        <br />
    </div>
    <div class="col-md-8">
        <div>
            异常记录清单与异常信息：（@JsonObj.abnormalListNum 个）
            <div class="abnormalFrame">
                <ol>
                        @foreach (var item in ViewBag.abnormalList_temp as List<JianHeMES.Models.Burn_in>)
                        {
                            <li>@Html.RouteLink(item.BarCodesNum, "Default", new { Controller = "Burn_in", Action = "Details", id = item.Id }, new { target = "_blank" })<br />@item.Burn_in_OQCCheckAbnormal</li>
                        }
                    </ol>
            </div>
        </div>
    </div>
</div>
<form action="/Burn_in/Index" method="post" target="_blank" style="display:none">
    @Html.AntiForgeryToken()
    <input type="text" name="orderNum" value="@JsonObj.OrderNum" id="formOrderNum" />
    <input type="text" name="OQCNormal" value="" />
    <input type="text" name="BoxBarCode" value="" />
    <input type="text" name="SearchString" value="" />
    <input type="text" name="FinishStatus" value="" id="formNormal" />
</form>

<script>
    $(function () {
        $(".aOrderNum").click(function (event) {
            event.preventDefault();
            $("#formNormal").val($(this).attr("myAttr"));
            $("form").submit();
        });
        $("#deliveryDate").text('@ViewBag.DeliveryDate'.split(" ")[0]);
    });
</script>

